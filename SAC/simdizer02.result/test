void foo_l(int a[4], int b[4], int c[4])
{
   int tmp[4];
   tmp[0] = b[0]*c[0];
   tmp[1] = b[1]*c[2];
   a[0] = tmp[0]+tmp[1];

   tmp[2] = b[0]*c[1];
   tmp[3] = b[1]*c[3];
   a[1] = tmp[2]+tmp[3];
}
void foo_l(int a[4], int b[4], int c[4])
{
   int tmp[4];
   //PIPS:SAC generated short vector(s)
   short v4hi_vec0[4], v4hi_vec1[4], v4hi_vec2[4];
   //PIPS:SAC generated int vector(s)
   int v2si_vec3[2], v2si_vec4[2], v2si_vec5[2];
   SIMD_LOAD_V4SI_TO_V4HI(v4hi_vec2, &c[0]);
   SIMD_LOAD_GENERIC_V4HI(v4hi_vec1, b[0], b[0], b[1], b[1]);
   SIMD_MULW(v4hi_vec0, v4hi_vec1, v4hi_vec2);
   SIMD_STORE_GENERIC_V4HI(v4hi_vec0, &tmp[0], &tmp[2], &tmp[1], &tmp[3]);
   SIMD_LOAD_GENERIC_V2SI(v2si_vec5, tmp[0], tmp[2]);
   SIMD_LOAD_GENERIC_V2SI(v2si_vec4, tmp[1], tmp[3]);
   SIMD_ADDD(v2si_vec3, v2si_vec4, v2si_vec5);
   SIMD_STORE_V2SI(v2si_vec3, &a[0]);
}

