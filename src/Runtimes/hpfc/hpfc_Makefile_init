MAKEFILE = Makefile
INCLUDED = Makefile.include
HPFC_MAKEFILE = hpfc_Makefile
MOVE = mv
M4 = $(HPFC_M4)

.INIT:	$(INCLUDED)

all:

$(MAKEFILE): $(HPFC_MAKEFILE)
	$(M4) -D ARCHITECTURE=$(PVM_ARCH) hpfc_architecture_m4_macros \
		$(HPFC_MAKEFILE) >> $(INCLUDED)

#
include $(INCLUDED)

#
# that is all
#
