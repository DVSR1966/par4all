#! /bin/sh
#
# $RCSfile: hpfc_add_warning,v $ ($Date: 1994/11/04 15:59:54 $, )
# version $Revision$
# got on %D%, %T%
# $Id$
#
# add a warning to the automatically generated files
#

script=`basename $0`

[ $# -eq 1 ] ||
{
  echo "Usage: $script filename" 1>&2
  exit 1
}

name=$1
tmp=/tmp/hpfc_add_warning_tmp.$$

rm -f $tmp

{
  cat <<-EOF
	c
	c This file has been automatically generated by the hpf compiler
	c
	EOF
  cat $name 
  cat <<-EOF
	c
	c That is all
	c
	EOF
} > $tmp

rm -f $name
mv $tmp $name

