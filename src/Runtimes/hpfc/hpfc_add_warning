#! /bin/sh
#
# $RCSfile: hpfc_add_warning,v $ ($Date: 1996/12/27 13:00:52 $, )
# version $Revision$
#
# add a warning to the automatically generated files
#

script=`basename $0`

[ $# -eq 1 ] ||
{
  echo "Usage: $script filename" 1>&2
  exit 1
}

name=$1
tmp=/tmp/hpfc_add_warning_tmp.$$

simple=`basename $name`

rm -f $tmp

{
  cat <<-EOF
	!
	! File $simple
	! This file has been automatically generated by the hpf compiler
	!
	EOF
  cat $name 
  cat <<-EOF
	!
	! That is all
	!
	EOF
} > $tmp

rm -f $name
mv $tmp $name

# end of $RCSfile: hpfc_add_warning,v $
#
