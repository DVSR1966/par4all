#! /bin/sh
#
# install a file only if different from the one already installed.
#
# Fabien COELHO, 03/08/95
#
# $RCSfile: pips_install_file,v $ (version $Revision$)
# ($Date: 1995/08/03 11:51:50 $, )
#

usage()
{
  echo "usage: `basename $0` file_1 file_2 ($2)";
  exit ${1:-1}
}

[ $# -eq 2 ] || usage 2 "invalid number of arguments"
[ -f $1 ] || usage 3 "$1 not found"

# test if different

test -f $2 && cmp -s $1 $2 && 
{
  echo "$1 was not modified" 
  exit 0
}

# else

echo "copying $1"
cp $1 $2

# that is all
#
