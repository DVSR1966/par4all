# $Id$
# minimum rc file for sh-compatible shells

# default architecture
export PIPS_ARCH=LINUX_x86_64_LL

# subversion repositories
export NEWGEN_SVN=https://svn.cri.ensmp.fr/svn/newgen
export LINEAR_SVN=https://svn.cri.ensmp.fr/svn/linear
export PIPS_SVN=https://svn.cri.ensmp.fr/svn/pips

prod=/home/fabien/PRIVE/prod

# software roots
#export EXTERN_ROOT=/home/fabien/PRIVE/prod/extern
#export NEWGEN_ROOT=/home/fabien/PRIVE/prod/newgen
#export LINEAR_ROOT=/home/fabien/PRIVE/prod/linear
# compiling or running pips "basically" does not require PIPS_ROOT
#export PIPS_ROOT=/home/fabien/PRIVE/prod/pips

export PIPS_VALIDATION_NO_PYPS=1
export PIPS_F77=gfortran
export PIPS_F90=gfortran
export PATH=/usr/local/bin:/usr/bin:/bin
export LD_LIBRARY_PATH=/usr/local/lib64

# fix path
PATH=$prod/pips/bin:$prod/pips/utils:$prod/newgen/bin:$PATH
