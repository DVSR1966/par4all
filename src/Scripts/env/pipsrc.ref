#
# obsolete environment variables

[ `logname` != coelho ] && 
{
UTILDIR=$PIPS_UTILDIR
PRODDIR=$PIPS_PRODDIR
BINDIR=$PIPS_BINDIR
LIBDIR=$PIPS_LIBDIR
COSTDIR=$PIPS_COSTDIR
SRCDIR=$PIPS_SRCDIR
LIBSRCDIR=$PIPS_LIBSRCDIR
BINSRCDIR=$PIPS_BINSRCDIR
RTSRCDIR=$PIPS_RTSRCDIR
DEVEDIR=$PIPS_DEVEDIR
EXTEDIR=$PIPS_EXTEDIR
TEMPDIR=$PIPS_TEMPDIR
RELEDIR=$PIPS_RELEDIR
INCLUDEDIR=$PIPS_INCLUDEDIR
DOCDIR=$PIPS_DOCDIR
}
