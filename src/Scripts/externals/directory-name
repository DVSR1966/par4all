#!/bin/sh
# recherche du nom de la directory passee en argument, et de celui de la
# directory courante par defaut; permet d'obtenir des noms relatifs
# plus parlants que . et .. avec "directory-name .."
# Francois Irigoin, 01/09/89
case $# in
0)	cd .;;
1)	cd $1;;
*)	echo "Usage: $0 [directory]"
	exit 1;;
esac

basename `pwd`
