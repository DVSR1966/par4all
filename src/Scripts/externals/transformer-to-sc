#!/bin/sh

# convert a transformer list of inequalities into a sc system with declaration of variables

# Francois Irigoin, September 1993

input=$1
output=$2

echo -n 'VAR ' >$output
sed -e 's/[-+=<>,{} ]/\
/g;s/#/_/' <$input | sed -e 's/^  *//g;s/  *$//g' | sed -e '/^$/d;/^[0-9][0-9]$/d;s/^[0-9][0-9]*\(.*\)/\1/' | sort | uniq | tr '\012' ',' | \
	cat - $input | sed -e 's/,{/\
{/;s/^,//;s/#/_/' >>$output
# {/' >>$output
# | sed -e 's/,$/foo/'
# cat $input >>$output
