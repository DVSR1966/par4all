#! /bin/sh
#
# $RCSfile: manual_accept,v $ (version $Revision$)
# $Date: 1997/01/04 11:51:24 $, 
#

CD=$PWD

for dir
do
  if test -d $dir
  then 
    cd $dir
    for f in *.result/*.out
    do 
        if [ "$f" != "*.result/*.out" ] 
        then
	    ref="`dirname $f`/`basename $f .out`"
	    echo CONSIDERING $ref and $f
	    diff $ref $f | less
	    echo 
	    echo "accept (y|n)?"
	    read answer
	    [ "$answer" = 'y' -o "$answer" = 'Y' ] && mv $f $ref
	fi
    done
    cd $CD
  fi
done

# end of $RCSfile: manual_accept,v $
#
