#! /bin/bash
#
# $Id$

svn=

for dir
do
  if [[ -d $dir ]]
  then 
    pushd $dir > /dev/null
    for file in *.result/out
    do 
      ref=${file%\/out}/test
      echo CONSIDERING $ref and $file
      ${PIPS_DIFF:-diff -b -u} $ref $file | ${PIPS_MORE:-less}
      echo 
      echo "accept (y|n)?"
      read answer
      if [ "$answer" = 'y' -o "$answer" = 'Y' ] 
      then 
	  mv $file $ref
	  test -d .svn && svn=1
      fi
    done
    popd > /dev/null
  fi
done

[[ $svn ]] && echo "Consider running \"svn ci $@\" to commit changes"
