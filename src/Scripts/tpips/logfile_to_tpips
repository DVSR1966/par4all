#!/bin/sh

#
# Usage: logfile_to_tpips <workspacename>
#
#	Convert the logfile of the named workspace
#	created by wpips to a tpips source.
#
# Known limitations:
#
#	- only one file per workspace is allowed
#	- do not display all the resources for a
#	  rule creating multiple resources.
#

WS=${1:?"Please give me the workspace name to work with"}
if [ `basename $WS` != "$WS" ]
then
	echo $0 can only be used on a local database
	exit 1
fi

WDIR=${WS}.database
CAT=${PAGER:-cat}

echo \#
echo \# file generated by logfile_to_tpips for workspace $WS
echo \#
sed -n \
-e 's/^Registering file \(.*\)/create '$WS' \1/p' \
-e 's/^Module \(.*\) selected/module \1/p' \
-e 's/^Closing all modules./close/p' \
-e 's/^Workspace [^ ]* opened/open '$WS'/p' \
-e 's/^Directory \(.*\) selected/cd \1/p' \
-e 's/^Request: build resource \(.*\) for module \(.*\)./display \1(\2)/p' \
-e 's/^Request: perform rule \(.*\) on module \(.*\)./apply \1(\2)/p' \
-e 's/^Options: phase \(.*\) (\(.*\)) set on./activate \2 # \1/p' \
-e 's/^HPFC View of "\(.*\)" done./shell '$CAT' '$WDIR'\/hpfc\/\1/p' \
-e 's/^User Request.../# user request :/p' \
-e 's/^"\(.*\)"$/\1/p' \
$WS.database/LOGFILE
echo quit
echo \# EOF
#end
