int main()
{
   FILE *pFile;
   int n;
   char name[100];

   pFile = fopen("myfile.txt", "w");
   for(n = 0; n <= 2; n += 1) {
      puts("please, enter a name: ");
      gets(name);
      fprintf(pFile, "Name %d %s\n", n, name);
   }
   fclose(pFile);
}
//               <may be read    >: __IO_EFFECTS:LUNS[*]
//               <may be written >: __IO_EFFECTS:LUNS[*]
int main()
{
   FILE *pFile;
   int n;
   char name[100];
//               <may be read    >: __IO_EFFECTS:LUNS[*]
//               <may be written >: __IO_EFFECTS:LUNS[*]
//               <must be written>: pFile

   pFile = fopen("myfile.txt", "w");
//               <may be read    >: __IO_EFFECTS:LUNS[*] n name[*] 
//                                  pFile
//               <may be written >: __IO_EFFECTS:LUNS[*] name[*]
//               <must be written>: n
   for(n = 0; n <= 2; n += 1) {
//               <may be read    >: __IO_EFFECTS:LUNS[*]
//               <may be written >: __IO_EFFECTS:LUNS[*]
      puts("please, enter a name: ");
//               <may be read    >: __IO_EFFECTS:LUNS[*]
//               <may be written >: __IO_EFFECTS:LUNS[*] name[*]
      gets(name);
//               <may be read    >: __IO_EFFECTS:LUNS[*] name[*]
//               <may be written >: __IO_EFFECTS:LUNS[*]
//               <must be read   >: n pFile
      fprintf(pFile, "Name %d %s\n", n, name);
   }
//               <may be read    >: __IO_EFFECTS:LUNS[*]
//               <may be written >: __IO_EFFECTS:LUNS[*]
//               <must be read   >: pFile
   fclose(pFile);
}
