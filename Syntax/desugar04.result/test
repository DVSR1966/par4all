      SUBROUTINE DESUGAR04(X, Y, *, *)

c     Same as desugar01.f, but without forward references to labels

      READ *, I, N                                                      0001

c     assign statement
      NEXT = 200                                                        0002

c     labelled logical if with alternate return
100   IF (X.GT.0.) GOTO 99998                                           0004

c     labelled logical if with computed go to
200   IF (X.EQ.0.) GOTO 99997                                           0007

c     labelled logical if with assigned go to
300   IF (X.LT.0.) GOTO 99996                                           0010

c     labelled loop

400   CONTINUE
      DO 500 I = 1, N                                                   0013
         PRINT *, I                                                     0014
500      CONTINUE                                                       0015

      I_PIPS_RETURN_CODE_ = 0                                           0016
      RETURN
99996 CONTINUE
      IF (NEXT.EQ.100) GOTO 100                                         0011
      IF (NEXT.EQ.200) GOTO 200                                         0011
      IF (NEXT.EQ.300) GOTO 300                                         0011
      STOP                                                              0009
99997 CONTINUE
      IF (I.EQ.1) GOTO 100                                              0008
      IF (I.EQ.2) GOTO 200                                              0008
      IF (I.EQ.3) THEN                                                  0008
         GOTO 300
      ELSE
         GOTO 300
      ENDIF
99998 CONTINUE
      I_PIPS_RETURN_CODE_ = 2                                           0005
      END

