\def\ABBREVx#1#2{\DefProtectCharMacro{A#1}{\index{#1@#2}#2\egroup\xspace}}
% Create an abreviation in small caps with text from the second argument:
\def\ABBREVsc#1#2{\ABBREVx{#1}{\textsc{#2}}}
% Automatically put an abreviation in small caps:
\def\ABBREV#1{\ABBREVsc{#1}{#1}}
% Idem with linking:
\def\ABBREVxl#1#2#3{\DefProtectCharMacro{A#1}{\index{#1@#2}\href{#3}{#2}\egroup\xspace}}
\def\ABBREVscl#1#2#3{\ABBREVxl{#1}{\textsc{#2}}{#3}}
\def\ABBREVl#1#2{\ABBREVscl{#1}{#1}{#2}}



