      SUBROUTINE SILBER03(A, B, N)

C     Check what happens with coarse grain parallelization on Georges' examples
C     presented at CPC'98

      REAL A(N), B(N)

      DOALL I = 1, N                                                    0001
         IF (A(I).GE.0.) B(I) = 0.                                      0002
         A(I) = 1.                                                      0004
      ENDDO

      END
