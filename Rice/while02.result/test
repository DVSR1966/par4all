void while02(int n)
{
   int i;
   int j;
   float x[100];
   float y[100];
//               <must be read   >: i n

   while (i<n) {
//               <must be written>: j
      for(j = 0; j <= 99; j += 1)
//               <must be read   >: j
//               <must be written>: x[j]
         x[j] = 0.;
//               <must be written>: j
      for(j = 0; j <= 99; j += 1)
//               <must be read   >: j
//               <must be written>: y[j]
         y[j] = 0.;
//               <must be read   >: i
//               <must be written>: i
      i++;
   }
}
Privatize scalar variables
Ask for some statistics about the job to be done:
Ask for the parallelization of "while02"
void while02(int n)
{
   int i;
   int j;
   float x[100];
   float y[100];

   while (i<n) {
#pragma omp parallel for 
      for(j = 0; j <= 99; j += 1)
         x[j] = 0.;
#pragma omp parallel for 
      for(j = 0; j <= 99; j += 1)
         y[j] = 0.;
      i++;
   }
}
