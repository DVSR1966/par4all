      PROGRAM STRINGS

C     Parallelization of string manipulations

      CHARACTER*80 TAB(10)

      DOALL I = 1, 10                                                   0001
         TAB(I) = 'Hello! '                                             0002
      ENDDO

      DO I = 2, 10                                                      0003
         TAB(I) = TAB(I)(1:7)//TAB(I-1)(1:7*I-7)                        0004
      ENDDO

      DO I = 1, 10                                                      0005
         PRINT *, TAB(I)                                                0006
      ENDDO

      END
