
Source code with transformers


//  T() {}

int main()
{

//  T(i) {}

   int i;                                                               /*0006*/

//  T(j) {}

   int j;                                                               /*0007*/

//  T(j) {0<=j, j<=1}


   j = i++%2;                                                           /*0009*/
}

Source code with preconditions


//  P() {}

int main()
{

//  P() {}

   int i;                                                               /*0006*/

