
Points-to


Transformers


//  T() {}

void memcopy05b(int size, char *src, char *dst)
{

//  T(d,dst,ls,s,size,src) {}

   if (src!=(void *) 0&&dst!=(void *) 0) {

//  T(s) {s==src}

      char *s = (char *) src;

//  T(d) {d==dst, s==src}

      char *d = (char *) dst;

//  T(ls) {d==dst, s+size==ls, s==src}

      char *ls = s+size;

//  T(d,dst,ls,s,size,src) {}

      while (s<ls)

//  T(d,dst,ls,s,size,src) {}

         *d++ = *s++;
   }
}

Preconditions


//  P() {}

void memcopy05b(int size, char *src, char *dst)
{

//  P() {}

   if (src!=(void *) 0&&dst!=(void *) 0) {

//  P() {}

      char *s = (char *) src;

//  P(s) {s==src}

      char *d = (char *) dst;

//  P(d,s) {d==dst, s==src}

      char *ls = s+size;

//  P(d,ls,s) {d==dst, s+size==ls, s==src}

      while (s<ls)

//  P(d,dst,ls,s,size,src) {}

         *d++ = *s++;
   }
}
