
Points-to


Transformers with point-to


//  T(mainInt) {mainInt==0}

int mainInt()
{

//  T() {}

   int a[10];

//  T(p,q) {}

   int *p, *q;

//  T(q) {}


   q = &a[0];

//  T(p) {p==q+1}

   p = q+1;

//  T() {p==q+1}


   *q = 0;

//  T() {p==q+1}

   *p = 0;

//  T(mainInt) {mainInt==0, p==q+1}


   return 0;
}

Preconditions with point-to


//  P() {}

int mainInt()
{

//  P() {}

   int a[10];

//  P() {}

   int *p, *q;

//  P(p,q) {}


   q = &a[0];

//  P(p,q) {}

   p = q+1;

//  P(p,q) {p==q+1}


   *q = 0;

//  P(p,q) {p==q+1}

   *p = 0;

//  P(p,q) {p==q+1}


   return 0;
}
