
Points-to


Transformers with point-to


//  T(main) {main==0}

int main()
{

//  T() {}

   BYTE a[10];

//  T(p,q) {}

   P_BYTE p, q;

//  T(q) {}


   q = a;

//  T(p) {q+sizeof(unsigned char *)==p}

   p = q+1;

//  T() {q+sizeof(unsigned char *)==p}


   *q = 0;

//  T() {q+sizeof(unsigned char *)==p}

   *p = 0;

//  T(main) {main==0, q+sizeof(unsigned char *)==p}


   return 0;
}

Preconditions with point-to


//  P() {}

int main()
{

//  P() {}

   BYTE a[10];

//  P() {}

   P_BYTE p, q;

//  P(p,q) {}


   q = a;

//  P(p,q) {}

   p = q+1;

//  P(p,q) {q+sizeof(unsigned char *)==p}


   *q = 0;

//  P(p,q) {q+sizeof(unsigned char *)==p}

   *p = 0;

//  P(p,q) {q+sizeof(unsigned char *)==p}


   return 0;
}
