
Points-to


// Points To IN: none


// Points To OUT: none

int main()
{

// Points To: none

   int i;

// Points To: none

   int *p;

// Points To:
// p -> undefined , EXACT

   p = (void *) 0;

// Points To:
// p -> *NULL* , EXACT


   if (rand())

// Points To:
// p -> *NULL* , EXACT

      p = malloc(sizeof(*p));

// Points To:
// p -> *HEAP*_l_12 , MAY
// p -> *NULL* , MAY


   i = *p;

// Points To:
// p -> *HEAP*_l_12 , MAY


   return 0;
}

PROPER  EFFECTS

int main()
{
   int i;
   int *p;
//             <    is written>: p
   p = (void *) 0;
//             <    is read   >: _RANDOM_EFFECTS:GEN_SEED
//             <    is written>: _RANDOM_EFFECTS:GEN_SEED

   if (rand())
//             <    is read   >: _MALLOC_EFFECTS:_MALLOC_
//             <    is written>: p _MALLOC_EFFECTS:_MALLOC_
      p = malloc(sizeof(*p));
//             <may be read   >: *HEAP*_l_12
//             <    is read   >: p
//             <    is written>: i

   i = *p;

   return 0;
}

Transformers with point-to


//  T(main) {main==0}

int main()
{

//  T(i) {}

   int i;

//  T(p) {}

   int *p;

//  T(p) {NULL==p}

   p = (void *) 0;

//  T(p) {}


   if (rand())

//  T(p) {NULL==p#init}

      p = malloc(sizeof(*p));

//  T(i) {}


   i = *p;

//  T(main) {main==0}


   return 0;
}

Preconditions with point-to


//  P() {}

int main()
{

//  P() {}

   int i;

//  P(i) {}

   int *p;

//  P(i,p) {}

   p = (void *) 0;

//  P(i,p) {NULL==p}


   if (rand())

//  P(i,p) {NULL==p}

      p = malloc(sizeof(*p));

//  P(i,p) {}


   i = *p;

//  P(i,p) {}


   return 0;
}
