
Points-to


Transformers with point-to


//  T(main) {main==0}

int main()
{

//  T() {}

   BYTE a[10], b[10];

//  T(p0,q1) {}

   P_BYTE p0, q1;

//  T(p1,q0) {}

   BYTE *q0, *p1;

//  T(p0) {}


   p0 = a;

//  T(q0) {p0==q0-1}

   q0 = p0+1;

//  T() {p0==q0-1}


   *p0 = 0;

//  T() {p0==q0-1}

   *q0 = 0;

//  T(p1) {p0==q0-1}

   
   
   p1 = b;

//  T(q1) {p0==q0-1, p1==q1-1}

   q1 = p1+1;

//  T() {p0==q0-1, p1==q1-1}


   *p1 = 0;

//  T() {p0==q0-1, p1==q1-1}

   *q1 = 0;

//  T(main) {main==0, p0==q0-1, p1==q1-1}


   return 0;
}

Preconditions with point-to


//  P() {}

int main()
{

//  P() {}

   BYTE a[10], b[10];

//  P() {}

   P_BYTE p0, q1;

//  P(p0,q1) {}

   BYTE *q0, *p1;

//  P(p0,p1,q0,q1) {}


   p0 = a;

//  P(p0,p1,q0,q1) {}

   q0 = p0+1;

//  P(p0,p1,q0,q1) {p0==q0-1}


   *p0 = 0;

//  P(p0,p1,q0,q1) {p0==q0-1}

   *q0 = 0;

//  P(p0,p1,q0,q1) {p0==q0-1}

   
   
   p1 = b;

//  P(p0,p1,q0,q1) {p0==q0-1}

   q1 = p1+1;

//  P(p0,p1,q0,q1) {p0==q0-1, p1==q1-1}


   *p1 = 0;

//  P(p0,p1,q0,q1) {p0==q0-1, p1==q1-1}

   *q1 = 0;

//  P(p0,p1,q0,q1) {p0==q0-1, p1==q1-1}


   return 0;
}
