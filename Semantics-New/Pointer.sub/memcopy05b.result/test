
Points-to


Transformers with point-to


//  T() {}

void memcopy05b(int size, char *src, char *dst)
{

//  T() {}

   if (src!=(void *) 0&&dst!=(void *) 0) {

//  T(s) {s==src}

      char *s = (char *) src;

//  T(d) {d==dst, s==src}

      char *d = (char *) dst;

//  T(ls) {d==dst, s+size==ls, s==src}

      char *ls = s+size;

//  T(d,s) {size+src==ls}

      while (s<ls)

//  T(d,s) {size+src==ls}

         *d++ = *s++;
   }
}

Preconditions with point-to


//  P() {}

void memcopy05b(int size, char *src, char *dst)
{

//  P() {}

   if (src!=(void *) 0&&dst!=(void *) 0) {

//  P() {}

      char *s = (char *) src;

//  P(s) {s==src}

      char *d = (char *) dst;

//  P(d,s) {d==dst, s==src}

      char *ls = s+size;

//  P(d,ls,s) {d==dst, s+size==ls, s==src}

      while (s<ls)

//  P(d,ls,s) {size+src==ls}

         *d++ = *s++;
   }
}
