
TRANSFORMERS


//  T() {}

void skimo02(int x, int y, int n)
{

//  T(x,y) {x#init<=x}

   while (alea()) {

//  T(x) {x==x#init+1}

      x++;

//  T(y) {n+y==y#init+1}

      y += 1-n;
   }

//  T() {}

   return;
}

PRECONDITIONS


//  P() {2<=n}

void skimo02(int x, int y, int n)
{

//  P() {2<=n}

   while (alea()) {

//  P(x,y) {2<=n}

      x++;

//  P(x,y) {2<=n}

      y += 1-n;
   }

//  P(x,y) {2<=n}

   return;
}

TRANSFORMERS AFTER REFINEMENT


//  T() {2<=n}

void skimo02(int x, int y, int n)
{

//  T(x,y) {2<=n, x#init<=x, x+y<=x#init+y#init}

   while (alea()) {

//  T(x) {x==x#init+1, 2<=n}

      x++;

//  T(y) {n+y==y#init+1, 2<=n}

      y += 1-n;
   }

//  T() {2<=n}

   return;
}
