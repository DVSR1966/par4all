int main(int argc, char *argv[])
{
   float b[N], c[N], a;                                                 /*0003*/
   int i;                                                               /*0004*/

   a = 0;                                                               /*0006*/

init:
   for(i = 0; i <= 999999; i += 1) {
      b[i] = i;                                                         /*0010*/
      c[i] = i+1;                                                       /*0011*/
   }
compute:
   for(i = 0; i <= 999999; i += 1)
      a = a+b[i]*c[i];                                                  /*0015*/

   printf("Result = %f\n", a);                                          /*0017*/
   return 0;                                                            /*0018*/
}
