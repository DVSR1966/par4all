
Initial code

int flatten_code01()
{
   // BEGIN BLOCK
   int i = 1;
   int j;
   i++;
   {
      // BEGIN BLOCK
      int i = 2;
      i++;
      j = 1;
      // END BLOCK
   }
   i = j;

   printf("%d %d\n", i, j);
   // END BLOCK
}

Code after flatten_code

int flatten_code01()
{
   // BEGIN BLOCK
   int i = 1;
   int j;
   //PIPS generated variable
   int i_0 = 2;
   i++;
   i_0++;
   j = 1;
   i = j;

   printf("%d %d\n", i, j);
   // END BLOCK
}
