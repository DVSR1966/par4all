
Initial code

void c_clean_declarations01(int x)
{
   int y;

   if (y) {
      int x = y++;
      int z;

      y = 1;
   }
   else {
      int x = 0;
      int z = y--;

      y = -1;
   }
   fprintf(stderr, "x=%dn", x);
}

