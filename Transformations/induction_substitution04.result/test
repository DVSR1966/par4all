      SUBROUTINE COSTI_SIMPLIFIED (N,WSAVE)
      IMPLICIT DOUBLE PRECISION (A-H, O-Z)
      DIMENSION       WSAVE(*)
      PARAMETER (PI = 3.14159265358979)
      NP1 = N+1                                                         0007
      NS2 = N/2                                                         0008
      DT = PI/FLOAT(NM1)                                                0009
      KC = NP1-1                                                        0010
      DO 101 K = 2, NS2                                                 0011
         KC = KC-1                                                      0012
         WSAVE(KC) = 2.D0*DCOS(DT)                                      0013
101      CONTINUE                                                       0014
      END

