      PROGRAM ONETRIPLOOP01

      READ *, N                                                         0001

      M = N                                                             0002

      DO I = N, M                                                       0003
         PRINT *, 'i = ', I                                             0004
      ENDDO

      END

Initial code with preconditions


C  P() {}

      PROGRAM ONETRIPLOOP01

C  P() {}


      READ *, N                                                         0001

C  P(N) {}


      M = N                                                             0002

C  P(M,N) {M==N}


      DO I = N, M                                                       0003

C  P(I,M,N) {I==M, I==N}

         PRINT *, 'i = ', I                                             0004
      ENDDO

      END

Code after one trip loop detection and simplification

      PROGRAM ONETRIPLOOP01

      READ *, N                                                         0001

      M = N                                                             0002

      I = N
      PRINT *, 'i = ', I                                                0004

      END

