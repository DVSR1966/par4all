}

Code after scalarization

int main(int argc, char **argv)
{
   // BEGIN BLOCK
   int i;
   int n = 100;
   int *x;
   int *y;
   int *t;

   x = (int *) malloc(sizeof(int));
   y = (int *) malloc(sizeof(int));
   t = (int *) malloc(sizeof(int));

   for(i = 0; i <= n-1; i += 1)
      scanf("%d %d", &x[i], &y[i]);

   for(i = 0; i <= n-1; i += 1) {
      // BEGIN BLOCK
      t[i] = x[i];
      x[i] = y[i];
      y[i] = t[i];
      // END BLOCK
   }
   printf("%d %d", x[n], y[n]);
   // END BLOCK
}
