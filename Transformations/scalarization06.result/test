//  <__IO_EFFECTS:LUNS[PHI1]-W-EXACT-{PHI1==0}>

      scanf("%d %d", &x[i], &y[i]);

   for(i = 0; i <= n-1; i += 1) {
      // BEGIN BLOCK
      t[i] = x[i];
      x[i] = y[i];
      y[i] = t[i];
      // END BLOCK
   }

