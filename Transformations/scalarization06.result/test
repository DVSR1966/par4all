
Initial code

int main(int argc, char **argv)
{
   // BEGIN BLOCK
   int i;
   int n = 100;
   int *x;
   int *y;
   int *t;

   for(i = 0; i <= n-1; i += 1) {
      // BEGIN BLOCK
      t[i] = x[i];
      x[i] = y[i];
      y[i] = t[i];
      // END BLOCK
   }
   // END BLOCK
}

Code after scalarization

int main(int argc, char **argv)
{
   // BEGIN BLOCK
   int i;
   int n = 100;
   int *x;
   int *y;
   int *t;

   for(i = 0; i <= n-1; i += 1) {
      // BEGIN BLOCK
      t[i] = x[i];
      x[i] = y[i];
      y[i] = t[i];
      // END BLOCK
   }
   // END BLOCK
}
