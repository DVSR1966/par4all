
Initial source code

void loop_interchange01(int ni, int nj)
{
   float x[n][n];
   int i;
   int j;

l1:   
   for(i = 0; i <= ni-1; i += 1)
l2:      
      for(j = 0; j <= nj-1; j += 1)
         x[i][j] = 0.;
}

Source code after loop interchange

void loop_interchange01(int ni, int nj)
{
   int jp;
   int ip;
   float x[n][n];
   int i;
   int j;

l1:   
   for(ip = 0; ip <= -1+nj; ip += 1)
      for(jp = 0; jp <= -1+ni; jp += 1)
         x[jp][ip] = 0.;
}

