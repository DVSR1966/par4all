int flatten_code02()
{
   // BEGIN BLOCK
   int i = 1;
   int j;
   int i_0;
   int k_0;
   int k_1;
   i++;
   i_0 = 2;
   k_0 = 2;
   i_0++;
   j = 1;
   k_1 = 2;
   i_0++;
   j = 1;
   i = j;

   printf("%d %d\n", i, j);
   // END BLOCK
}
