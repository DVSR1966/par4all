
Initial code

int main(int argc, char **argv)
{
   // BEGIN BLOCK
   int d, i, n = 100;
   int x[n], y[n], t[n];

   for(i = 0; i <= n-1-1; i += 1) {
      // BEGIN BLOCK
      t[i] = x[i];
      x[i] = y[i];
      y[i] = t[i+1];
      // END BLOCK
   }
   // END BLOCK
}

Code after scalarization

int main(int argc, char **argv)
{
   // BEGIN BLOCK
   int d, i, n = 100;
   int x[n], y[n], t[n];

   for(i = 0; i <= n-1-1; i += 1) {
      // BEGIN BLOCK
      t[i] = x[i];
      x[i] = y[i];
      y[i] = t[i+1];
      // END BLOCK
   }
   // END BLOCK
}
