
Initial code

int foo(int c[10])
{
   int i, j, k;
   for(i = 0; i <= 9; i += 1) {
      j = i;
      for(j = j; j <= 9; j += 1) {
         k = k+1;
         c[j] = k;
      }
   }
   return c[10];
}
int main(int argc, char *argv[])
{
   int c[10];
   int i, k = 0;
   for(i = 0; i <= 9; i += 1)
      c[i] = i;
   k = foo(c);
   printf("%d", k);
   return 0;
}

Code after variable_expansion

int foo(int c[10])
{
   int i, j[9+1], k[9+1];
   for(i = 0; i <= 9; i += 1) {
      j[i] = i;
      for (;j[i]<=9;j[i] += 1) {
         k[i] = k[i]+1;
         c[j[i]] = k[i];
      }
   }
   return c[10];
}

