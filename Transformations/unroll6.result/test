      PROGRAM UNROLL6
C
      PARAMETER (N=4)
      REAL T(N)
C     First: pragma inside a comment; Second: just the pragma; third:
C     nor pragma at all
C
Cxxx
      DO 10 I = 1, N                                                    0001
         T(I) = -2*I                                                    0002
10       CONTINUE                                                       0003
Cxxx
      DO 20 I = 1, N                                                    0004
         T(I) = -2*I                                                    0005
20       CONTINUE                                                       0006
C
      DO 30 I = 1, N                                                    0007
         T(I) = -4*I                                                    0008
30       CONTINUE                                                       0009
C
      END
      PROGRAM UNROLL6
C
      PARAMETER (N=4)
      REAL T(N)
C     First: pragma inside a comment; Second: just the pragma; third:
C     nor pragma at all
C
Cxxx
      T(1) = -2*1                                                       0002
      T(2) = -2*2                                                       0002
      T(3) = -2*3                                                       0002
      T(4) = -2*4                                                       0002
10    CONTINUE
      I = 5
Cxxx
      T(1) = -2*1                                                       0005
      T(2) = -2*2                                                       0005
      T(3) = -2*3                                                       0005
      T(4) = -2*4                                                       0005
20    CONTINUE
      I = 5
C
      DO 30 I = 1, N                                                    0007
         T(I) = -4*I                                                    0008
30       CONTINUE                                                       0009
C
      END
