      PROGRAM EXEMPLEARTICLE
      INTEGER A, C
      CALL EXEMPLEARTICLEFOO(A, A, C)                                   0001
      PRINT *, A, C                                                     0002
      END
      SUBROUTINE EXEMPLEARTICLEFOO(A, B, C)
      INTEGER A, B, C
      READ *, A                                                         0001
      B = 3*A                                                           0002
C	Attention: impact alias MUST at (EXEMPLEARTICLE:(0,2))  between B and A
C	New flow-dependence with statement
C	B = 3*A
      C = A*B                                                           0003
      END
