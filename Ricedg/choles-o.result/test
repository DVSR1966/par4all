C***********************************************************************
      SUBROUTINE CHOLES(A,N,RL,Z)
      IMPLICIT REAL*8(A-H,O-Z)
C  ROUTINE DE CALCUL DE LA DECOMPOSEE DE CHOLESKI L*D*LT DE LA MATRICE A
C  L ETANT STOCKEE PLEINE COMME A, LA DIAGONALE DE L ETANT EGALE A 1/D .
C  LES MATRICES A ET RL PEUVENT ETRE CONFONDUES .
      COMMON/TOTO/Z1(640),Z2(640),D(640)
      DIMENSION A(N,N),RL(N,N),Z(N)
C  CALCUL DE LA PREMIERE COLONNE DE RL .
      Z1(1) = A(1,1)                                                    0001
      D(1) = 1./Z1(1)                                                   0002
      DOALL J = 2, N                                                    0003
1        RL(J,1) = A(J,1)*D(1)                                          0004
      ENDDO
C  CALCUL DES COLONNES 2 A N DE RL .
      DOALL I = 2, N                                                    0005
C  CALCUL DU TERME DIAGONAL .
         Z1(I) = A(I,I)                                                 0006
      ENDDO
      DO I = 2, N                                                       0005
         DOALL K = 1, I-1                                               0007
5           Z2(K) = RL(I,K)*Z1(K)                                       0008
         ENDDO
         DO K = 1, I-1                                                  0009
3           Z1(I) = Z1(I)-RL(I,K)*Z2(K)                                 0010
         ENDDO
         D(I) = 1./Z1(I)                                                0011
         DOALL J = I+1, N                                               0012
4           Z2(J) = A(J,I)                                              0013
         ENDDO
         DO K = 1, I-1                                                  0014
            DOALL J = I+1, N                                            0015
7              Z2(J) = Z2(J)-RL(J,K)*Z2(K)                              0016
            ENDDO
         ENDDO
         DOALL J = I+1, N                                               0018
8           RL(J,I) = Z2(J)*D(I)                                        0019
         ENDDO
      ENDDO
C  RANGEMENT DE L'INVERSE DE LA DIAGONALE .
      DO J = 1, N                                                       0021
9        RL(J*(N+1)-N,1) = D(J)                                         0022
      ENDDO
C RANGEMENT PAR TRANSPOSITION DES TERMES TRIANGULAIRES SUPERIEURS DE L .
      DOALL K = 2, N                                                    0023
         DOALL J = 1, K-1                                               0024
11          RL(J,K) = RL(K,J)                                           0025
         ENDDO
      ENDDO
      END
