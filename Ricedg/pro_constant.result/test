      PROGRAM SUPFLOW
      INTEGER A, C, D
      READ *, A                                                         0001
      CALL SUPFLOWFOO(A, A, C, D)                                       0002
      PRINT *, A, C, D                                                  0003
      END
      SUBROUTINE SUPFLOWFOO(A, B, C, D)
      INTEGER A, B, C, D
      A = 2                                                             0001
C	Attention: impact alias MUST at (SUPFLOW:(0,3))  between B and A
C	New flow-dependence with statement
C	A = 2
      C = B*A                                                           0002
      D = A+C                                                           0003
      END
