int main()
{
   float *a, *p;
   int i;
//             <    is read   >: _MALLOC_EFFECTS:_MALLOC_
//             <    is written>: a _MALLOC_EFFECTS:_MALLOC_

   a = (float *) malloc(10*sizeof(float));
//             <may be read   >: p
//             <    is read   >: a i
//             <    is written>: i p

   for (p = a, i = 0;i<10;p++)
//             <may be written>: *ANY_MODULE*:*ANYWHERE*
//             <    is read   >: p
      *p = 1.0;
   return 0;
}
POINTS TO
//  {}
int main()
{
//  {(a,*ANY_MODULE*:*NOWHERE*,-Exact-);(p,*ANY_MODULE*:*NOWHERE*,
//   -Exact-)}
   float *a, *p;
//  {(a,*ANY_MODULE*:*NOWHERE*,-Exact-);(p,*ANY_MODULE*:*NOWHERE*,
//   -Exact-)}
   int i;
//  {(a,*ANY_MODULE*:*NOWHERE*,-Exact-);(p,*ANY_MODULE*:*NOWHERE*,
//   -Exact-)}

   a = (float *) malloc(10*sizeof(float));
//  {(a,*ANY_MODULE*:*HEAP*,-Exact-);(p,*ANY_MODULE*:*NOWHERE*,
//   -Exact-)}

   for (p = a, i = 0;i<10;p++)
//  {(a,*ANY_MODULE*:*HEAP*,-Exact-);(p,*ANY_MODULE*:*ANYWHERE*_b0,
//   -Exact-)}
      *p = 1.0;
//  {(a,*ANY_MODULE*:*HEAP*,-Exact-);(p,*ANY_MODULE*:*ANYWHERE*_b0,
//   -Exact-)}
   return 0;
}
