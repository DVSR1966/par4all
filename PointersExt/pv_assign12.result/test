
PROPER POINTER EFFECTS

int main()
{
   int *a[2];
   int b[2];
//             <    is written>: c
   int c = 0;

   if (1)
//             <    is written>: a[0]
      a[0] = &b[0];
   else
//             <    is written>: a[0]
      a[0] = &b[1];
//             <    is written>: a[1]

   a[1] = &c;
   return 0;
}

POINTS-TO

//  {}
int main()
{
//  points to = {}
   int *a[2];
//  points to = {}
   int b[2];
//  points to = {}
   int c = 0;
//  points to = {}

   if (1)
//  points to = {}
      a[0] = &b[0];
   else
//  points to = {}
      a[0] = &b[1];
//  {(a[0],b[1],-MAY-);(a[0],b[0],-MAY-)}

   a[1] = &c;
//  {(a[0],b[1],-MAY-);(a[0],b[0],-MAY-);(a[1],c,-Exact-)}
   return 0;
}
