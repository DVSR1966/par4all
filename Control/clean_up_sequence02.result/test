{
// (0,1)
// (1,1)
   // BEGIN BLOCK
   {
// (1,2)
      // BEGIN BLOCK
      {
// (1,3)
         // BEGIN BLOCK
         int i;                                                         /*0005*/
// (1,5)
         i = 3;                                                         /*0006*/
         // END BLOCK
      }
      {
// (1,6)
         // BEGIN BLOCK
