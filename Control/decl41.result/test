// (2,4)
   for(i = 1; i <= (size-1); i += 1)
// (2,5)
      x = i;                                                            /*0007*/
   // END BLOCK
// (3,1)

// if the switch is removed, the loop index declarations reappears
   if ((0==0)) goto l99999;
// (10,1)

// (9,1)

