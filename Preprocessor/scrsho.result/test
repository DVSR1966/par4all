
Module scrsho

void scrsho(fx)
float (*fx)();	/* ANSI: float (*fx)(float); */
{
	int jz,j,i;
	float ysml,ybig,x2,x1,x,dyj,dx,y[60 +1];
	char scr[60 +1][21 +1];

	for (;;) {
		printf("\nEnter x1 x2 (x1=x2 to stop):\n");
		scanf("%f %f",&x1,&x2);
		if (x1 == x2) break;
		for (j=1;j<= 21 ;j++)
			scr[1][j]=scr[60 ][j]= 'l' ;
		for (i=2;i<=(60 -1);i++) {
			scr[i][1]=scr[i][21 ]= '-' ;
			for (j=2;j<=(21 -1);j++)
				scr[i][j]= ' ' ;
		}
		dx=(x2-x1)/(60 -1);
		x=x1;
		ysml=ybig=0.0;
		for (i=1;i<= 60 ;i++) {
			y[i]=(*fx)(x);
			if (y[i] < ysml)  ysml=y[i];
			if (y[i] > ybig)  ybig=y[i];
			x += dx;
		}
		if (ybig == ysml) ybig=ysml+1.0;
		dyj=(21 -1)/(ybig-ysml);
		jz=1-(int) (ysml*dyj);
		for (i=1;i<= 60 ;i++) {
			scr[i][jz]= '-' ;
			j=1+(int) ((y[i]-ysml)*dyj);
			scr[i][j]= 'x' ;
		}
		printf(" %10.3f ",ybig);
		for (i=1;i<= 60 ;i++) printf("%c",scr[i][21 ]);
		printf("\n");
		for (j=(21 -1);j>=2;j--) {
			printf("%12s"," ");
			for (i=1;i<= 60 ;i++) printf("%c",scr[i][j]);
			printf("\n");
		}
		printf(" %10.3f ",ysml);
		for (i=1;i<= 60 ;i++) printf("%c",scr[i][1]);
		printf("\n");
		printf("%8s %10.3f %44s %10.3f\n"," ",x1," ",x2);
	}
}
