float midsqu(funk,aa,bb,n)
float aa,bb;
float (*funk)(); /* ANSI: float (*funk)(float); */
int n;
{
        float x,tnm,sum,del,ddel,b,a;
        static float s;
        static int it;
        int j;

        b=sqrt(bb-aa);
        a=0.0;
        if (n == 1) {
                it=1;
                return (s=(b-a)*(2.0*(0.5*(a+b))*(*funk)(bb-(0.5*(a+b))*(0.5*(a+b)))));
        } else {
                tnm=it;
                del=(b-a)/(3.0*tnm);
                ddel=del+del;
                x=a+0.5*del;
                sum=0.0;
                for (j=1;j<=it;j++) {
                        sum += (2.0*(x)*(*funk)(bb-(x)*(x)));
                        x += ddel;
                        sum += (2.0*(x)*(*funk)(bb-(x)*(x)));
                        x += del;
                }
                it *= 3;
                return (s=(s+(b-a)*sum/tnm)/3.0);
        }
}
