
Transformers


//  T() {0==-1}

void run(void)
{

//  T(b) {b==0}

   int b = 0;

//  T(i) {b==0, i==0}

   int i = 0;

//  T(b,i) {b#init==0, i#init==0, 0<=i}

   while (1)

//  T(b,i) {i==i#init+1}

      if (alea())

//  T(i) {i==i#init+1}

         i++;
      else if (alea())

//  T(b,i) {b==0, i==i#init+1}

         b = 0, i++;
      else

//  T(b,i) {b==b#init+1, i==i#init+1}

         b++, i++;
}

Preconditions


//  P() {}

void run(void)
{

//  P() {}

   int b = 0;

//  P(b) {b==0}

   int i = 0;

//  P(b,i) {b==0, i==0}

   while (1)

//  P(b,i) {0<=b, 0<=i}

      if (alea())

//  P(b,i) {0<=b, 0<=i}

         i++;
      else if (alea())

//  P(b,i) {0<=b, 0<=i}

         b = 0, i++;
      else

//  P(b,i) {0<=b, 0<=i}

         b++, i++;
}
