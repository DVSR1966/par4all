void foo_l(int a[4], int b[4], int c[4])
{
   int tmp[4];
   tmp[0] = b[0]*c[0];
   tmp[1] = b[1]*c[2];
   a[0] = tmp[0]+tmp[1];

   tmp[2] = b[0]*c[1];
   tmp[3] = b[1]*c[3];
   a[1] = tmp[2]+tmp[3];
}
void foo_l(int a[4], int b[4], int c[4])
{
   int tmp[4];
   //PIPS:SAC generated v4hi vector(s)
   v4hi vec00, vec10, vec20;
   //PIPS:SAC generated v2si vector(s)
   v2si vec30, vec40, vec50;
   SIMD_LOAD_V4SI_TO_V4HI(vec20, &c[0]);
   SIMD_LOAD_GENERIC_V4HI(vec10, b[0], b[0], b[1], b[1]);
   SIMD_MULW(vec00, vec10, vec20);
   SIMD_STORE_GENERIC_V4HI(vec00, &tmp[0], &tmp[2], &tmp[1], &tmp[3]);
   SIMD_LOAD_GENERIC_V2SI(vec50, tmp[0], tmp[2]);
   SIMD_LOAD_GENERIC_V2SI(vec40, tmp[1], tmp[3]);
   SIMD_ADDD(vec30, vec40, vec50);
   SIMD_STORE_V2SI(vec30, &a[0]);
}

