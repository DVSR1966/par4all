raw file
int main(int argc, char *argv[])
{
   int b, *a, c[4];
   do {
      a = malloc(sizeof(int)*4);
      a[0] = b*2;
      a[1] = b*3;
      a[2] = b*4;
      a[3] = b*5;
   }
   while (0);
   do {
      c[0] = b*2;
      c[1] = b*3;
      c[2] = b*4;
      c[3] = b*5;
   }
   while (0);
   return 0;
}
after vectorization
int main(int argc, char *argv[])
{
   int b, *a, c[4];
   //SAC generated temporary array
   a4si pdata0 = {0, 0, 0, 0}, pdata1 = {2, 3, 4, 5};
   do {
      a = malloc(4*sizeof(int));
      a[0] = 2*pdata0[0];
      a[1] = 3*pdata0[0];
      a[2] = 4*pdata0[0];
      a[3] = 5*pdata0[0];
   }
   while (0);
   do {
      //PIPS:SAC generated v4si vector(s)
      v4si vec00, vec10, vec20;
      SIMD_LOAD_V4SI(vec20, &pdata0[0]);
      SIMD_LOAD_V4SI(vec10, &pdata1[0]);
      SIMD_MULD(vec00, vec10, vec20);
      SIMD_STORE_V4SI(vec00, &c[0]);
   }
   while (0);
   return 0;
}

