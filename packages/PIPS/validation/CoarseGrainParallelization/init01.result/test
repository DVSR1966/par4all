int main(int argc, char *argv[])
{
   int i;
   /* Initialize the border of the destination image, since it is used but
        never written to: */
   for (i = 0;i<501;i++)
      save[i][0] = save[0][i] = save[i][501-1] = save[501-1][i] = 0;
   return 0;
}
int main(int argc, char *argv[])
{
   int i;
   /* Initialize the border of the destination image, since it is used but
        never written to: */
   for(i = 0; i <= 500; i += 1)
      save[i][0] = save[0][i] = save[i][501-1] = save[501-1][i] = 0;
   return 0;
}
