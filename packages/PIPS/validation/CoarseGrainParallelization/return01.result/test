int find_neg(int size, int a[size])
{
   int i = 0;
   int result = -1;
   for(i = 0; i <= size-1; i += 1)
      if (a[i]<0) 
         return i;
   return result;
}
int main()
{
   int size = 10, i = 0;
   int a[size];
#pragma omp parallel for 
   for(i = 0; i <= size-1; i += 1)
      a[i] = 0;
   return find_neg(size, a);
}
// return the index of the first negative element, -1 if all positive
int find_neg(int size, int a[size]);

