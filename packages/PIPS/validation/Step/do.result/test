!!
!! file for do.f
!!
!
! do.f
!
! Example of a parallel and do directives
!
! 2008-2009
! Creation: A. Muller, FSC

      PROGRAM MY_DO
      implicit none
      INTEGER N
      PARAMETER (N=10)
      INTEGER I,A(N,2)
      CALL STEP_INIT_FORTRAN_ORDER
C$STEP !$omp parallel
      CALL MY_DO_PAR1_HYBRID(I, N, A)
C$STEP !$omp end parallel

      PRINT *, A                                                        0029
      CALL STEP_FINALIZE

      END
