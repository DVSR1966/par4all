###################### master/src/MASTER_PAR1_DO10_HYBRID.f ######################
!!
!! file for MASTER_PAR1_DO10_HYBRID.f
!!
      SUBROUTINE MASTER_PAR1_DO10_HYBRID(J_DUMMY, J_L, J_U, N, A)
      implicit none
      include "STEP.h"
      INTEGER*4 MAX_NB_REQUEST
      PARAMETER (MAX_NB_REQUEST = 32)
      INTEGER J_DUMMY, J, J_L, J_U, N, IDX, J_LOW, J_UP, STEP_J_LOW, 
     &STEP_J_UP
      INTEGER A(1:N), STEP_J_LOOPSLICES(IDX_SLICE_LOW:IDX_SLICE_UP, 1
     &:MAX_NB_LOOPSLICES), STEP_SR_A(IDX_SLICE_LOW:IDX_SLICE_UP, 1:1
     &, 0:MAX_NB_LOOPSLICES), STEP_REQUESTS(1:MAX_NB_REQUEST)
      CALL STEP_GET_SIZE(STEP_COMM_SIZE)                                0125
      CALL STEP_GET_RANK(STEP_COMM_RANK)                                0126

      CALL STEP_COMPUTELOOPSLICES(J_L, J_U, 1, STEP_COMM_SIZE,          0128
     &MAX_NB_LOOPSLICES, STEP_J_LOOPSLICES)                             0128

C     Put array boundaries into region arrays (SR: Send region)
C     First dimension: lower and upper bounds of each slice
C     Second dimension: for each dimension of the original array
C     Third dimension: store the boundaries of the local chunk.

C     The first element stores initial boundaries,
C     then one element for each process
      STEP_SR_A(IDX_SLICE_LOW,1,0) = 1                                  0138
      STEP_SR_A(IDX_SLICE_UP,1,0) = N                                   0139

C     Region computation
      DO IDX = 1, STEP_COMM_SIZE                                        0142
         J_LOW = STEP_J_LOOPSLICES(IDX_SLICE_LOW,IDX)                   0143
         J_UP = STEP_J_LOOPSLICES(IDX_SLICE_UP,IDX)                     0144
C  <A(PHI1)-write-EXACT-{J_LOW<=PHI1, 1<=PHI1, PHI1<=J_UP, PHI1<=N}>
         STEP_SR_A(IDX_SLICE_LOW,1,IDX) = MAX(J_LOW, 1)                 0146
         STEP_SR_A(IDX_SLICE_UP,1,IDX) = MIN(J_UP, N)                   0147
      ENDDO

C     Where work is done...
      STEP_J_LOW = STEP_J_LOOPSLICES(IDX_SLICE_LOW,STEP_COMM_RANK+1)    0151
      STEP_J_UP = STEP_J_LOOPSLICES(IDX_SLICE_UP,STEP_COMM_RANK+1)      0152
!$OMP do
      DO 10 J = STEP_J_LOW, STEP_J_UP                                   0154
         A(J) = J                                                       0155
         PRINT *, "do2", J                                              0156
10       CONTINUE                                                       0157
!$OMP end do

!$omp master

C     Communicating data to other nodes
C     3 communication shemes for all-to-all personalized broadcast :
C     STEP_NONBLOCKING, STEP_BLOCKING1 and STEP_BLOCKING2.
C     A nonblocking algo increment STEP_Nb_Request.
      STEP_NBREQUEST = 0                                                0166
      CALL STEP_ALLTOALLREGION(1, STEP_COMM_SIZE, STEP_SR_A,            0167
     &STEP_SIZEREGION(1, STEP_SR_A(IDX_SLICE_LOW,1,0)), A,              0167
     &STEP_TAG_DEFAULT, MAX_NB_REQUEST, STEP_REQUESTS, STEP_NBREQUEST   0167
     &, STEP_NBLOCKING_ALG, STEP_INTEGER4)                              0167
C     If STEP_Nb_Request equals 0, STEP_WAITALL does nothing
      CALL STEP_WAITALL(STEP_NBREQUEST, STEP_REQUESTS)                  0172

!$omp end master
!$omp barrier

      END
###################### master/src/MASTER_PAR1_HYBRID.f ######################
!!
!! file for MASTER_PAR1_HYBRID.f
!!
      SUBROUTINE MASTER_PAR1_HYBRID(J, N, A, I)
      implicit none
      include "STEP.h"
      INTEGER J, N, I
      INTEGER A(1:N)
!$OMP parallel
C$STEP !$omp do
      CALL MASTER_PAR1_DO10_HYBRID(J, 1, N, N, A)                       0122
      PRINT *, "parallel1", A, I                                        0123
      I = -1                                                            0124
C$STEP !$omp master
      CALL MASTER_PAR1_MASTER1_HYBRID(N, A, I)                          0126
C$STEP !$omp end master
C$STEP !$omp barrier   ! no implict barrier for "END MASTER" directive
      CALL MASTER_PAR1_BARRIER1_HYBRID                                  0129


      PRINT *, "parallel2", A, I                                        0132
!$OMP end parallel
      END
###################### master/src/MASTER_PAR1_MASTER1_HYBRID.f ######################
!!
!! file for MASTER_PAR1_MASTER1_HYBRID.f
!!
      SUBROUTINE MASTER_PAR1_MASTER1_HYBRID(N, A, I)
      implicit none
      include "STEP.h"
      INTEGER*4 MAX_NB_REQUEST
      PARAMETER (MAX_NB_REQUEST = 64)
      INTEGER N, I
      INTEGER A(1:N), STEP_SR_A(IDX_SLICE_LOW:IDX_SLICE_UP, 1:1), 
     &STEP_REQUESTS(1:MAX_NB_REQUEST)

!$omp master
      STEP_SR_A(IDX_SLICE_LOW,1) = 1                                    0125
      STEP_SR_A(IDX_SLICE_UP,1) = N                                     0126
      CALL STEP_GET_RANK(STEP_COMM_RANK)                                0127
      IF (STEP_COMM_RANK.EQ.0) THEN                                     0128
         PRINT *, "master", A, I                                        0129

         DO 20 I = 1, N                                                 0131
            A(I) = 2*I                                                  0132
20          CONTINUE                                                    0133
      ENDIF

C     Communicating data to other nodes
C     3 communication shemes for all-to-all personalized broadcast :
C     STEP_NONBLOCKING, STEP_BLOCKING1 and STEP_BLOCKING2.
C     A nonblocking algo increment STEP_Nb_Request.
      STEP_NBREQUEST = 0                                                0140
      CALL STEP_MASTERTOALLREGION(A, 1, STEP_SR_A, STEP_SIZEREGION(1    0141
     &, STEP_SR_A(IDX_SLICE_LOW,1)), MAX_NB_REQUEST, STEP_REQUESTS,     0141
     &STEP_NBREQUEST, STEP_NBLOCKING_ALG, STEP_INTEGER4)                0141
      CALL STEP_MASTERTOALLSCALAR(I, MAX_NB_REQUEST, STEP_REQUESTS,     0144
     &STEP_NBREQUEST, STEP_NBLOCKING_ALG, STEP_INTEGER4)                0144
C     If STEP_Nb_Request equals 0, STEP_WAITALL does nothing
      CALL STEP_WAITALL(STEP_NBREQUEST, STEP_REQUESTS)                  0147

!$omp end master
!$omp barrier

      END
###################### master/src/Makefile ######################
#Default Makefile to compile generated files

BIN=a.out

FC=mpif77
CC=mpicc

OpenMP_FLAG = -fopenmp

FLAGS = -g -O2
LDFLAGS = 


CSOURCES= *.c
FSOURCES= *.f
OBJFILES= *.o

LIB_STEP=libstep.a
RUNTIME=c
DIR_STEP=step_rt


$(BIN) : $(DIR_STEP)/$(LIB_STEP) $(OBJFILES)
	if ls  >/dev/null 2>&1 *.o ; then $(FC) $(OBJFILES) $(OpenMP_FLAG) $(LDFLAGS) -lstep -L$(DIR_STEP) -o $@; fi

$(OBJFILES):
	if ls  >/dev/null 2>&1 *.c ; then $(CC) $(OpenMP_FLAG) $(FLAGS) -c $(CSOURCES); fi
	if ls  >/dev/null 2>&1 *.f ; then $(FC) $(OpenMP_FLAG) $(FLAGS) -fno-underscoring -c $(FSOURCES); fi

$(DIR_STEP)/$(LIB_STEP):
	$(MAKE) -C $(DIR_STEP) $(LIB_STEP)

clean:
	$(MAKE) -C $(DIR_STEP) $@
	rm -f *.o *~


.IGNORE: clean###################### master/src/STEP.h ######################
      INCLUDE 'steprt_f.h'

      INTEGER STEP_MAX_NBNODE
      PARAMETER (STEP_MAX_NBNODE = 16)

      INTEGER max_nb_loopslices
      INTEGER step_nbrequest

      INTEGER STEP_COMM_SIZE, STEP_COMM_RANK

      PARAMETER (MAX_NB_LOOPSLICES = STEP_MAX_NBNODE)
      
      ! Globals
       INTEGER STEP_SizeRegion
       INTEGER IDX_SLICE_LOW,IDX_SLICE_UP,STEP_IDX
       PARAMETER (IDX_SLICE_LOW = 1,IDX_SLICE_UP=2)

###################### master/src/master.f ######################
!!
!! file for master.f
!!
!
!
! Example of a master directive
!
! 2008
! Creation: A. Muller, 2008
!
      PROGRAM MASTER
      implicit none
      INTEGER N
      PARAMETER (N=10)
      INTEGER I,J,A(N)
      CALL STEP_INIT_FORTRAN_ORDER

      I = -3                                                            0015
C$STEP !$omp parallel
      CALL MASTER_PAR1_HYBRID(J, N, A, I)
C$STEP !$omp end parallel
      CALL STEP_FINALIZE

      END
