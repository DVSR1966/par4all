      SUBROUTINE DO_REDUCTION_PARDO10(I, I_L, I_U, N, D, A, B, C)
      INTEGER I, I_L, I_U, N, A
      INTEGER D(1:N)
      REAL*4 C
      REAL*8 B

      DO 10 I = I_L, I_U                                                0007
         D(I) = I                                                       0008
         A = A+D(I)                                                     0009
         B = B*I                                                        0010
         C = C+I                                                        0011
10       CONTINUE                                                       0012
      END
