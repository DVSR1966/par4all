###################### do_reduction/src/DO_REDUCTION_PARDO10_HYBRID.f ######################
!!
!! file for DO_REDUCTION_PARDO10_HYBRID.f
!!
      SUBROUTINE DO_REDUCTION_PARDO10_HYBRID(I_DUMMY, I_L, I_U, N, D
     &, A, B, C)
      implicit none
      include "STEP.h"
      INTEGER*4 MAX_NB_REQUEST
      PARAMETER (MAX_NB_REQUEST = 128)
      INTEGER STEP_A_REDUC, I_DUMMY, I, I_L, I_U, N, A, IDX, I_LOW, 
     &I_UP, STEP_I_LOW, STEP_I_UP
      INTEGER D(1:N), STEP_I_LOOPSLICES(IDX_SLICE_LOW:IDX_SLICE_UP, 1
     &:MAX_NB_LOOPSLICES), STEP_SR_D(IDX_SLICE_LOW:IDX_SLICE_UP, 1:1
     &, 0:MAX_NB_LOOPSLICES), STEP_REQUESTS(1:MAX_NB_REQUEST)
      REAL*4 STEP_C_REDUC, C
      REAL*8 STEP_B_REDUC, B
      CALL STEP_GET_SIZE(STEP_COMM_SIZE)                                0128
      CALL STEP_GET_RANK(STEP_COMM_RANK)                                0129
      CALL STEP_INITREDUCTION(C, STEP_C_REDUC, STEP_SUM, STEP_REAL4)    0130
      CALL STEP_INITREDUCTION(B, STEP_B_REDUC, STEP_PROD, STEP_REAL8)   0131
      CALL STEP_INITREDUCTION(A, STEP_A_REDUC, STEP_SUM,                0132
     &STEP_INTEGER4)                                                    0132

      CALL STEP_COMPUTELOOPSLICES(I_L, I_U, 1, STEP_COMM_SIZE,          0135
     &MAX_NB_LOOPSLICES, STEP_I_LOOPSLICES)                             0135

C     Put array boundaries into region arrays (SR: Send region)
C     First dimension: lower and upper bounds of each slice
C     Second dimension: for each dimension of the original array
C     Third dimension: store the boundaries of the local chunk.

C     The first element stores initial boundaries,
C     then one element for each process
      STEP_SR_D(IDX_SLICE_LOW,1,0) = 1                                  0145
      STEP_SR_D(IDX_SLICE_UP,1,0) = N                                   0146

C     Region computation
      DO IDX = 1, STEP_COMM_SIZE                                        0149
         I_LOW = STEP_I_LOOPSLICES(IDX_SLICE_LOW,IDX)                   0150
         I_UP = STEP_I_LOOPSLICES(IDX_SLICE_UP,IDX)                     0151
C  <D(PHI1)-write-EXACT-{I_LOW<=PHI1, 1<=PHI1, PHI1<=I_UP, PHI1<=10}>
         STEP_SR_D(IDX_SLICE_LOW,1,IDX) = MAX(I_LOW, 1)                 0153
         STEP_SR_D(IDX_SLICE_UP,1,IDX) = MIN(I_UP, 10)                  0154
      ENDDO

C     Where work is done...
      STEP_I_LOW = STEP_I_LOOPSLICES(IDX_SLICE_LOW,STEP_COMM_RANK+1)    0158
      STEP_I_UP = STEP_I_LOOPSLICES(IDX_SLICE_UP,STEP_COMM_RANK+1)      0159
!$OMP parallel do reduction(+ : A) reduction(* : B) reduction(+ : C)

      DO 10 I = STEP_I_LOW, STEP_I_UP                                   0162
         D(I) = I                                                       0163
         A = A+D(I)                                                     0164
         B = B*I                                                        0165
         C = C+I                                                        0166
10       CONTINUE                                                       0167
!$OMP end parallel do

!$omp master

C     Communicating data to other nodes
C     3 communication shemes for all-to-all personalized broadcast :
C     STEP_NONBLOCKING, STEP_BLOCKING1 and STEP_BLOCKING2.
C     A nonblocking algo increment STEP_Nb_Request.
      STEP_NBREQUEST = 0                                                0176
      CALL STEP_ALLTOALLREGION(1, STEP_COMM_SIZE, STEP_SR_D,            0177
     &STEP_SIZEREGION(1, STEP_SR_D(IDX_SLICE_LOW,1,0)), D,              0177
     &STEP_TAG_DEFAULT, MAX_NB_REQUEST, STEP_REQUESTS, STEP_NBREQUEST   0177
     &, STEP_NBLOCKING_ALG, STEP_INTEGER4)                              0177
C     If STEP_Nb_Request equals 0, STEP_WAITALL does nothing
      CALL STEP_WAITALL(STEP_NBREQUEST, STEP_REQUESTS)                  0182
      CALL STEP_REDUCTION(C, STEP_C_REDUC, STEP_SUM, STEP_REAL4)        0183
      CALL STEP_REDUCTION(B, STEP_B_REDUC, STEP_PROD, STEP_REAL8)       0184
      CALL STEP_REDUCTION(A, STEP_A_REDUC, STEP_SUM, STEP_INTEGER4)     0185

!$omp end master
!$omp barrier

      END
