int main(int argc, char *argv[])
{
   float b[N], c[N], a;                                                 /*0003*/
   int i;                                                               /*0004*/

   a = 0;                                                               /*0006*/

init:   do {                                                                 /*0014*/
      for(i = 0; i <= 999999; i += 1) {
         b[i] = i;                                                      /*0011*/
         c[i] = i+1;                                                    /*0012*/
      }
   }
   while (1);                                                           /*0014*/
compute:   do {                                                                 /*0019*/
      for(i = 0; i <= 999999; i += 1)
         a = a+b[i]*c[i];                                               /*0018*/
   }
   while (1);                                                           /*0019*/

   printf("Result = %f\n", a);                                          /*0021*/
   return 0;                                                            /*0022*/
}
