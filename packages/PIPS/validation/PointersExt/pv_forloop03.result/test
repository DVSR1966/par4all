
PROPER POINTER EFFECTS

int main()
{
   float *a, *p;
   int i;
//             <    is read   >: _MALLOC_EFFECTS:_MALLOC_
//             <    is written>: a _MALLOC_EFFECTS:_MALLOC_

   a = (float *) malloc(10*sizeof(float));
//             <    is read   >: a
//             <    is written>: i p

   p = a, i = 0;
//             <    is read   >: i
   while (i<10) {
//             <    is read   >: p
//             <    is written>: p[0]
      *p = 1.0;
//             <    is read   >: p
//             <    is written>: p
      p++;
   }
   return 0;
}

POINTS-TO

//  {}
int main()
{
//  points to = {}
   float *a, *p;
//  {(a,*ANY_MODULE*:*NOWHERE*_b0,-Exact-);(p,
//   *ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
   int i;
//  {(a,*ANY_MODULE*:*NOWHERE*_b0,-Exact-);(p,
//   *ANY_MODULE*:*NOWHERE*_b0,-Exact-)}

   a = (float *) malloc(10*sizeof(float));
//  {(a,*HEAP*_l_8,-Exact-);(p,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}

   p = a, i = 0;
//  {(a,*HEAP*_l_8,-Exact-);(p,*HEAP*_l_8,-Exact-)}
   while (i<10) {
//  points to = {}
      *p = 1.0;
//  points to = {}
      p++;
   }
//  {(a,*HEAP*_l_8,-Exact-);(p,*HEAP*_l_8,-MAY-);(p,
//   *ANY_MODULE*:*ANYWHERE*_b0,-MAY-)}
   return 0;
}
