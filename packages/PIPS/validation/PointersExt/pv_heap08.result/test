
PROPER POINTER EFFECTS

int main()
{
   int *p;
   int a;
//             <    is read   >: a
   if (a==1)
//             <    is read   >: _MALLOC_EFFECTS:_MALLOC_
//             <    is written>: p _MALLOC_EFFECTS:_MALLOC_
      p = (int *) malloc(2*sizeof(int));
   else
//             <    is read   >: _MALLOC_EFFECTS:_MALLOC_
//             <    is written>: p _MALLOC_EFFECTS:_MALLOC_
      p = (int *) malloc(3*sizeof(int));
//             <    is read   >: p
//             <    is written>: p[0]
   p[0] = 0;
//             <    is read   >: p
//             <    is written>: p[1]
   p[1] = 1;
//             <    is read   >: p _MALLOC_EFFECTS:_MALLOC_
//             <    is written>: _MALLOC_EFFECTS:_MALLOC_
   free(p);
   return 0;
}

POINTS-TO

//  {}
int main()
{
//  points to = {}
   int *p;
//  {(p,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
   int a;
//  {(p,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
   if (a==1)
//  {(p,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
      p = (int *) malloc(2*sizeof(int));
   else
//  {(p,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
      p = (int *) malloc(3*sizeof(int));
//  {(p,*HEAP*_l_10,-MAY-);(p,*HEAP*_l_8,-MAY-)}
   p[0] = 0;
//  {(p,*HEAP*_l_10,-MAY-);(p,*HEAP*_l_8,-MAY-)}
   p[1] = 1;
//  {(p,*HEAP*_l_10,-MAY-);(p,*HEAP*_l_8,-MAY-)}
   free(p);
//  {(p,*HEAP*_l_10,-MAY-);(p,*HEAP*_l_8,-MAY-)}
   return 0;
}
