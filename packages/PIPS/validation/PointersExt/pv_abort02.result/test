
PROPER POINTER EFFECTS

int main()
{
   int **a;
   int b;
//             <    is read   >: NULL
//             <    is written>: a
   a = (int **) NULL;
//             <    is read   >: a
//             <    is written>: a[0]
   a[0] = &b;
   return 0;
}

POINTS-TO

//  {}
int main()
{
//  points to = {}
   int **a;
//  {(a,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
   int b;
//  {(a,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
   a = (int **) NULL;
//  {(a,*NULL_POINTER*,-Exact-)}
   a[0] = &b;
//  {(*NULL_POINTER*,b,-Exact-);(a,*NULL_POINTER*,-Exact-)}
   return 0;
}
