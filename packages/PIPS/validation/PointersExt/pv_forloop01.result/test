
PROPER POINTER EFFECTS

int main()
{
   float t;
   float a;
//             <    is written>: t

   t = 1.0;
//             <    is read   >: t
   while (t<2.0) {
//             <    is read   >: a t
//             <    is written>: a
      a = a+t*0, 5;
//             <    is read   >: t
//             <    is written>: t
      t += 0, 01;
   }
   return 0;
}

POINTS-TO

//  {}
int main()
{
//  points to = {}
   float t;
//  points to = {}
   float a;
//  points to = {}

   t = 1.0;
//  points to = {}
   while (t<2.0) {
//  points to = {}
      a = a+t*0, 5;
//  points to = {}
      t += 0, 01;
   }
//  points to = {}
   return 0;
}
