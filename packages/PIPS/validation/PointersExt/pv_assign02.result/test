
PROPER POINTER EFFECTS

int main()
{
   int *a[2];
//             <    is written>: b
   int b = 0;
//             <    is written>: c
   int c = 1;
//             <    is written>: a[0]
   a[0] = &b;
//             <    is written>: a[1]
   a[1] = &b;
//             <    is written>: a[1]
   a[1] = &c;
   return 0;
}

POINTS-TO

//  {}
int main()
{
//  points to = {}
   int *a[2];
//  points to = {}
   int b = 0;
//  points to = {}
   int c = 1;
//  points to = {}
   a[0] = &b;
//  {(a[0],b,-Exact-)}
   a[1] = &b;
//  {(a[1],b,-Exact-);(a[0],b,-Exact-)}
   a[1] = &c;
//  {(a[1],c,-Exact-);(a[0],b,-Exact-)}
   return 0;
}
