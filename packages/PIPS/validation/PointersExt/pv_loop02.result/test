
PROPER POINTER EFFECTS

int main()
{
   int i;
   int *p;
//             <    is read   >: _MALLOC_EFFECTS:_MALLOC_
//             <    is written>: p _MALLOC_EFFECTS:_MALLOC_

   p = (int *) malloc(10*sizeof(int));
//             <    is written>: i

   for(i = 0; i <= 9; i += 1)
//             <    is read   >: i p
//             <    is written>: p[i]
      p[i] = i;
   return 0;
}

POINTS-TO

//  {}
int main()
{
//  points to = {}
   int i;
//  points to = {}
   int *p;
//  {(p,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}

   p = (int *) malloc(10*sizeof(int));
//  {(p,*HEAP*_l_7,-Exact-)}

   for(i = 0; i <= 9; i += 1)
//  {(p,*HEAP*_l_7,-Exact-)}
      p[i] = i;
//  {(p,*HEAP*_l_7,-Exact-)}
   return 0;
}
