
PROPER POINTER EFFECTS

int main()
{
//             <    is written>: i
   int i = 0;
   int *p[10];
   int a[10];
//             <    is read   >: i
   do {
//             <    is read   >: i
//             <    is written>: p[i]
      p[i] = &a[i];
//             <    is read   >: i
//             <    is written>: i
      i++;
   }
   while (i<10);
   return 0;
}

POINTS-TO

//  {}
int main()
{
//  points to = {}
   int i = 0;
//  points to = {}
   int *p[10];
//  points to = {}
   int a[10];
//  points to = {}
   do {
//  points to = {}
      p[i] = &a[i];
//  points to = {}
      i++;
   }
   while (i<10);
//  {(p[i],a[i],-Exact-)}
   return 0;
}
