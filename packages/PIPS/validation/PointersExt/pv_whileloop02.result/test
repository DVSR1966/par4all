
PROPER POINTER EFFECTS

int main()
{
//             <    is written>: i
   int i = 0;
   int *p;
//             <    is read   >: _MALLOC_EFFECTS:_MALLOC_
//             <    is written>: p _MALLOC_EFFECTS:_MALLOC_

   p = (int *) malloc(10*sizeof(int));
//             <    is read   >: i

   while (i<10) {
//             <    is read   >: i p
//             <    is written>: p[i]
      p[i] = i;
//             <    is read   >: i
//             <    is written>: i
      i++;
   }
   return 0;
}

POINTS-TO

//  {}
int main()
{
//  points to = {}
   int i = 0;
//  points to = {}
   int *p;
//  {(p,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}

   p = (int *) malloc(10*sizeof(int));
//  {(p,*HEAP*_l_7,-Exact-)}

   while (i<10) {
//  points to = {}
      p[i] = i;
//  points to = {}
      i++;
   }
//  {(p,*HEAP*_l_7,-Exact-)}
   return 0;
}
