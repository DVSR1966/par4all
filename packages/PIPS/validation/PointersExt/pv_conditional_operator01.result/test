
PROPER POINTER EFFECTS

int main()
{
   int *p, *q, *r;
//             <    is written>: a b c d
   int a = 0, b = 1, c = 2, d = 4;
//             <    is written>: p

   p = &a;
//             <    is read   >: a b
//             <    is written>: q
   q = a==b?&c:&d;
//             <may be read   >: q
//             <    is read   >: a b
//             <    is written>: r
   r = a<b?&c:q;
   return 0;
}

POINTS-TO

//  {}
int main()
{
//  points to = {}
   int *p, *q, *r;
//  {(p,*ANY_MODULE*:*NOWHERE*_b0,-Exact-);(q,
//   *ANY_MODULE*:*NOWHERE*_b0,-Exact-);(r,*ANY_MODULE*:*NOWHERE*_b0,
//   -Exact-)}
   int a = 0, b = 1, c = 2, d = 4;
//  {(p,*ANY_MODULE*:*NOWHERE*_b0,-Exact-);(q,
//   *ANY_MODULE*:*NOWHERE*_b0,-Exact-);(r,*ANY_MODULE*:*NOWHERE*_b0,
//   -Exact-)}

   p = &a;
//  {(p,a,-Exact-);(q,*ANY_MODULE*:*NOWHERE*_b0,-Exact-);(r,
//   *ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
   q = a==b?&c:&d;
//  {(p,a,-Exact-);(q,d,-MAY-);(q,c,-MAY-);(r,
//   *ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
   r = a<b?&c:q;
//  {(p,a,-Exact-);(q,d,-MAY-);(q,c,-MAY-);(r,d,-MAY-);(r,c,-MAY-)}
   return 0;
}
