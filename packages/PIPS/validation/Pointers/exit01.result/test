void exit01()
{
   // BEGIN BLOCK
   int i;
   int *j;
//             <    is written>: j

   j = &i;
   exit(0);
//             <    is written>: i
   i = 2;
   // END BLOCK
}
POINTS TO
//  {}
void exit01()
{
//  points to = {}
   // BEGIN BLOCK
//  points to = {}
   int i;
//  points to = {}
   int *j;
//  {(j,*ANY_MODULE*:*NOWHERE*,-Exact-)}

   j = &i;
//  {(j,i,-Exact-)}
   exit(0);
//  {(j,i,-Exact-)}
   i = 2;
   // END BLOCK
}
