int main()
{
   int *p, *q, i, j;
//             <    is written>: i

   i = 1;
//             <    is written>: j
   j = 0;
//             <    is written>: p
   /* Initialisation des pointeurs*/
   p = &i;
//             <    is written>: q
   q = &j;
//             <    is read   >: q
//             <    is written>: p
   
   /* Les deux pointeurs pointent vers la meme case memoire j */
   p = q;
//             <may be written>: *ANY_MODULE*:*ANYWHERE*
//             <    is read   >: p
   
   /* Dereferencement du pointeur p -> acces à la variable j */
   *p = 1;

   return 0;
}
POINTS TO
//  {}
int main()
{
//  {(p,*ANY_MODULE*:*NOWHERE*,-Exact-);(q,*ANY_MODULE*:*NOWHERE*,
//   -Exact-)}
   int *p, *q, i, j;
//  {(p,*ANY_MODULE*:*NOWHERE*,-Exact-);(q,*ANY_MODULE*:*NOWHERE*,
//   -Exact-)}

   i = 1;
//  {(p,*ANY_MODULE*:*NOWHERE*,-Exact-);(q,*ANY_MODULE*:*NOWHERE*,
//   -Exact-)}
   j = 0;
//  {(p,*ANY_MODULE*:*NOWHERE*,-Exact-);(q,*ANY_MODULE*:*NOWHERE*,
//   -Exact-)}
   /* Initialisation des pointeurs*/
   p = &i;
//  {(p,i,-Exact-);(q,*ANY_MODULE*:*NOWHERE*,-Exact-)}
   q = &j;
//  {(p,i,-Exact-);(q,j,-Exact-)}
   
   /* Les deux pointeurs pointent vers la meme case memoire j */
   p = q;
//  {(p,j,-Exact-);(q,j,-Exact-)}
   
   /* Dereferencement du pointeur p -> acces à la variable j */
   *p = 1;
//  {(p,j,-Exact-);(q,j,-Exact-)}

   return 0;
}
