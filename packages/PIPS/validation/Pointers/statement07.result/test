int main()
{
   // BEGIN BLOCK
   int *x, *a, i;
//             <    is written>: i
   i = 1;
//             <    is written>: a
   a = &i;
//             <    is read   >: a
//             <    is written>: x
   x = a;

   return 0;
   // END BLOCK
}
POINTS TO
//  {}
int main()
{
//  points to = {}
   // BEGIN BLOCK
//  points to = {}
   int *x, *a, i;
//  {(a,*ANY_MODULE*:*NOWHERE*,-Exact-);(x,*ANY_MODULE*:*NOWHERE*,
//   -Exact-)}
   i = 1;
//  {(a,*ANY_MODULE*:*NOWHERE*,-Exact-);(x,*ANY_MODULE*:*NOWHERE*,
//   -Exact-)}
   a = &i;
//  {(a,i,-Exact-);(x,*ANY_MODULE*:*NOWHERE*,-Exact-)}
   x = a;
//  {(a,i,-Exact-);(x,i,-Exact-)}

   return 0;
   // END BLOCK
}
