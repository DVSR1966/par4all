
PROPER POINTER EFFECTS

void dereferencing03()
{
   double *p;
   int i;
//             <    is read   >: p
//             <    is written>: p[1]

   *(p+1) = 0.;
//             <    is read   >: i p
//             <    is written>: p[i]
   *(p+i) = 0.;
}

POINTS-TO

//  {}
void dereferencing03()
{
//  points to = {}
   double *p;
//  {(p,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
   int i;
//  {(p,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}

   *(p+1) = 0.;
//  {(p,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
   *(p+i) = 0.;
}
