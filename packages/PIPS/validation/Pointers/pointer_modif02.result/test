
PROPER POINTER EFFECTS

int main()
{
   int *p, *q;
//             <    is read   >: p
//             <    is written>: p[0]

   *p = 1;
//             <    is read   >: p
//             <    is written>: q

   foo(&q, p);
//             <    is read   >: q
//             <    is written>: q[0]
   *q = 2;
   return 0;
}

POINTS-TO

//  {}
int main()
{
//  points to = {}
   int *p, *q;
//  {(p,*ANY_MODULE*:*NOWHERE*_b0,-Exact-);(q,
//   *ANY_MODULE*:*NOWHERE*_b0,-Exact-)}

   *p = 1;
//  {(p,*ANY_MODULE*:*NOWHERE*_b0,-Exact-);(q,
//   *ANY_MODULE*:*NOWHERE*_b0,-Exact-)}

   foo(&q, p);
//  {(p,*ANY_MODULE*:*NOWHERE*_b0,-Exact-);(q,
//   *ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
   *q = 2;
//  {(p,*ANY_MODULE*:*NOWHERE*_b0,-Exact-);(q,
//   *ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
   return 0;
}
