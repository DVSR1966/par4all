int main()
{
   int **x, *x1, x2, *y, y1;
//             <    is written>: x2
   x2 = 0;
//             <    is written>: y1
   y1 = 1;
//             <    is written>: x1
   x1 = &x2;
//             <    is read   >: true

   if (true) {
//             <    is written>: x

      x = &x1;
//             <    is written>: y
      y = &y1;
   }
   else
//             <may be written>: *ANY_MODULE*:*ANYWHERE*
//             <    is read   >: x
      *x = &y;

   return 0;
}
POINTS TO
//  {}
int main()
{
//  {(x,*ANY_MODULE*:*NOWHERE*,-Exact-);(x1,*ANY_MODULE*:*NOWHERE*,
//   -Exact-);(y,*ANY_MODULE*:*NOWHERE*,-Exact-)}
   int **x, *x1, x2, *y, y1;
//  {(x,*ANY_MODULE*:*NOWHERE*,-Exact-);(x1,*ANY_MODULE*:*NOWHERE*,
//   -Exact-);(y,*ANY_MODULE*:*NOWHERE*,-Exact-)}
   x2 = 0;
//  {(x,*ANY_MODULE*:*NOWHERE*,-Exact-);(x1,*ANY_MODULE*:*NOWHERE*,
//   -Exact-);(y,*ANY_MODULE*:*NOWHERE*,-Exact-)}
   y1 = 1;
//  {(x,*ANY_MODULE*:*NOWHERE*,-Exact-);(x1,*ANY_MODULE*:*NOWHERE*,
//   -Exact-);(y,*ANY_MODULE*:*NOWHERE*,-Exact-)}
   x1 = &x2;
//  {(x,*ANY_MODULE*:*NOWHERE*,-Exact-);(x1,x2,-Exact-);(y,
//   *ANY_MODULE*:*NOWHERE*,-Exact-)}

   if (true) {
//  {(x,x1,-Exact-);(x1,x2,-Exact-);(y,y1,-Exact-)}

      x = &x1;
//  {(x,x1,-Exact-);(x1,x2,-Exact-);(y,y1,-Exact-)}
      y = &y1;
   }
   else
//  {(*ANY_MODULE*:*ANYWHERE*,y,-Exact-);(x,*ANY_MODULE*:*NOWHERE*,
//   -Exact-);(x1,x2,-Exact-);(y,*ANY_MODULE*:*NOWHERE*,-Exact-)}
      *x = &y;
//  {(*ANY_MODULE*:*ANYWHERE*,y,-MAY-);(x,*ANY_MODULE*:*NOWHERE*,
//   -MAY-);(x,x1,-MAY-);(x1,x2,-Exact-);(y,*ANY_MODULE*:*NOWHERE*,
//   -MAY-);(y,y1,-MAY-)}

   return 0;
}
