void update01()
{
   // BEGIN BLOCK
   int i;
   int *p;
//             <    is written>: p

   p = &i;
//             <    is read   >: p
//             <    is written>: p
   p++;
//             <    is written>: i
   i = 2;
   // END BLOCK
}
POINTS TO
//  {}
void update01()
{
//  points to = {}
   // BEGIN BLOCK
//  points to = {}
   int i;
//  points to = {}
   int *p;
//  {(p,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}

   p = &i;
//  {(p,i,-Exact-)}
   p++;
//  {(p,*ANY_MODULE*:*ANYWHERE*_b0,-Exact-)}
   i = 2;
   // END BLOCK
}
