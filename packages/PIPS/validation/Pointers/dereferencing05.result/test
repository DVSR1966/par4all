
PROPER POINTER EFFECTS

void dereferencing05()
{
   double *p;
   int i;
//             <    is read   >: p
//             <    is written>: p p[0]

   *p++ = 0.;
//             <    is read   >: p
//             <    is written>: p p[0]
   *p-- = 0.;
//             <    is read   >: p
//             <    is written>: p p[1]
   *++p = 0.;
//             <    is read   >: p
//             <    is written>: p p[-1]
   *--p = 0.;
}

POINTS-TO

//  {}
void dereferencing05()
{
//  points to = {}
   double *p;
//  {(p,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
   int i;
//  {(p,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}

   *p++ = 0.;
//  {(p,*ANY_MODULE*:*ANYWHERE*_b0,-Exact-)}
   *p-- = 0.;
//  {(p,*ANY_MODULE*:*ANYWHERE*_b0,-Exact-)}
   *++p = 0.;
//  {(p,*ANY_MODULE*:*ANYWHERE*_b0,-Exact-)}
   *--p = 0.;
}
