
PROPER POINTER EFFECTS

int main(void)
{
   int i, j;
   int **pp;
   {
//             <    is written>: pi
      int *pi = &i;
//             <    is written>: pp
      pp = &pi;
//             <    is read   >: pp pp[0]
//             <    is written>: pp[0][0]
      **pp = 1;
   }
//             <    is read   >: pp pp[0]
//             <    is written>: pp[0][0]
   
   // pp points to a dead value in the stack
   // should generate an error
   **pp = 0;
//             <    is read   >: pp
//             <    is written>: pp[0]
   // segfault?
   *pp = &j;
   return 0;
}

POINTS-TO

//  {}
int main(void)
{
//  points to = {}
   int i, j;
//  points to = {}
   int **pp;
   {
//  {(pp,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
      int *pi = &i;
//  {(pi,i,-Exact-);(pp,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
      pp = &pi;
//  {(pi,i,-Exact-);(pp,pi,-Exact-)}
      **pp = 1;
   }
//  {(pp,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
   
   // pp points to a dead value in the stack
   // should generate an error
   **pp = 0;
//  {(pp,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
   // segfault?
   *pp = &j;
//  {(*ANY_MODULE*:*ANYWHERE*_b0,j,-Exact-);(pp,
//   *ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
   return 0;
}
