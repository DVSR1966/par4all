
PROPER POINTER EFFECTS

int main()
{
   FILE *pFile;
   int n;
   char name[100];
//             <may be read   >: __IO_EFFECTS:LUNS[*]
//             <may be written>: __IO_EFFECTS:LUNS[*]
//             <    is written>: pFile

   pFile = fopen("myfile.txt", "w");
//             <    is written>: n
   for(n = 0; n <= 2; n += 1) {
//             <may be read   >: stdout[0]
//             <may be written>: stdout[0]
//             <    is read   >: stdout __IO_EFFECTS:LUNS[1]
//             <    is written>: __IO_EFFECTS:LUNS[1]
      puts("please, enter a name: ");
//             <may be read   >: stdin[0]
//             <may be written>: name[*] stdin[0]
//             <    is read   >: stdin __IO_EFFECTS:LUNS[0]
//             <    is written>: __IO_EFFECTS:LUNS[0]
      gets(name);
//             <may be read   >: name[*] pFile[0] __IO_EFFECTS:LUNS[*]
//             <may be written>: pFile[0] __IO_EFFECTS:LUNS[*]
//             <    is read   >: n pFile
      fprintf(pFile, "Name %d %s\n", n, name);
   }
//             <may be read   >: pFile[0] __IO_EFFECTS:LUNS[*]
//             <may be written>: pFile[0] __IO_EFFECTS:LUNS[*]
//             <    is read   >: pFile
   fclose(pFile);
}

POINTS-TO

//  {}
int main()
{
//  points to = {}
   FILE *pFile;
//  {(pFile,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
   int n;
//  {(pFile,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
   char name[100];
//  {(pFile,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}

   pFile = fopen("myfile.txt", "w");
//  {(pFile,*ANY_MODULE*:*ANYWHERE*,-Exact-)}
   for(n = 0; n <= 2; n += 1) {
//  points to = {}
      puts("please, enter a name: ");
//  points to = {}
      gets(name);
//  points to = {}
      fprintf(pFile, "Name %d %s\n", n, name);
   }
//  {(pFile,*ANY_MODULE*:*ANYWHERE*,-Exact-)}
   fclose(pFile);
}
