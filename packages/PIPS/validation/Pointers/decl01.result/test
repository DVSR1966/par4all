
PROPER POINTER EFFECTS

int decl01()
{
//             <    is written>: i
   int i = 2;
//             <    is read   >: i
//             <    is written>: j
   int j = i;
   int a[sizeof(i)];
//             <    is written>: i

   i = 2;
//             <    is read   >: i
//             <    is written>: j
   j = i;
//             <    is written>: j
   j = sizeof(i);
   return 0;
}

POINTS-TO

//  {}
int decl01()
{
//  points to = {}
   int i = 2;
//  points to = {}
   int j = i;
//  points to = {}
   int a[sizeof(i)];
//  points to = {}

   i = 2;
//  points to = {}
   j = i;
//  points to = {}
   j = sizeof(i);
//  points to = {}
   return 0;
}
