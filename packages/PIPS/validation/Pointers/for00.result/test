int main()
{
   // BEGIN BLOCK
   int *a, *b, c, d, i;
//               <must be written>: c
   c = 0;
//               <must be written>: d
   d = 1;
//               <must be written>: b
   b = &c;
//               <must be read   >: i
//               <must be written>: i

   for (i = 1;i<5;i++) {
      // BEGIN BLOCK
//               <must be written>: c
      c = 5;
//               <must be read   >: b
//               <must be written>: a
      a = b;
//               <must be written>: b
      b = &d;
      // END BLOCK
   }

   return 0;
   // END BLOCK
}
POINTS TO
//  {}
int main()
{
//  points to = {}
   // BEGIN BLOCK
//  points to = {}
   int *a, *b, c, d, i;
//  points to = {}
   c = 0;
//  points to = {}
   d = 1;
//  points to = {}
   b = &c;
//  {(b,c,-Exact-)}

   for (i = 1;i<5;i++) {
//  {(a,c,-MAY-);(a,d,-MAY-);(b,c,-MAY-);(b,d,-MAY-)}
      // BEGIN BLOCK
//  points to = {}
      c = 5;
//  points to = {}
      a = b;
//  points to = {}
      b = &d;
      // END BLOCK
   }
//  {(a,c,-MAY-);(a,d,-MAY-);(b,c,-MAY-);(b,d,-MAY-)}

   return 0;
   // END BLOCK
}
