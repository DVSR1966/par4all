
PROPER POINTER EFFECTS

void lhs02()
{
//             <    is written>: i
   int i = 2;
//             <    is written>: j
   int j = 2;
//             <may be written>: *ANY_MODULE*:*ANYWHERE*
//             <    is read   >: i

   *(i>2?&i:&j) = 3;
//             <may be read   >: j
//             <    is read   >: i
//             <    is written>: j

   j = i>2?i+1:j+2;
}

POINTS-TO

//  {}
void lhs02()
{
//  points to = {}
   int i = 2;
//  points to = {}
   int j = 2;
//  points to = {}

   *(i>2?&i:&j) = 3;
//  points to = {}

   j = i>2?i+1:j+2;
}
