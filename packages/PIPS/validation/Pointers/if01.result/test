int main()
{
   // BEGIN BLOCK
   int *x, x1, x2, y;
//             <    is written>: x1
   x1 = 1;
//             <    is written>: x2
   x2 = 2;

   if (0==0)
//             <    is written>: x
      x = &x1;
   else
//             <    is written>: x
      x = &x2;
//             <may be read   >: *ANY_MODULE*:*ANYWHERE*
//             <    is written>: y

   y = *x;
   return 0;
   // END BLOCK
}
POINTS TO
//  {}
int main()
{
//  points to = {}
   // BEGIN BLOCK
//  points to = {}
   int *x, x1, x2, y;
//  {(x,*ANY_MODULE*:*NOWHERE*,-Exact-)}
   x1 = 1;
//  {(x,*ANY_MODULE*:*NOWHERE*,-Exact-)}
   x2 = 2;
//  {(x,*ANY_MODULE*:*NOWHERE*,-Exact-)}

   if (0==0)
//  {(x,*ANY_MODULE*:*NOWHERE*,-Exact-)}
      x = &x1;
   else
//  {(x,*ANY_MODULE*:*NOWHERE*,-Exact-)}
      x = &x2;
//  {(x,x2,-MAY-);(x,x1,-MAY-)}

   y = *x;
//  {(x,x2,-MAY-);(x,x1,-MAY-)}
   return 0;
   // END BLOCK
}
int main()
{
   // BEGIN BLOCK
   int *x, x1, x2, y;
//             <    is written>: x1
   x1 = 1;
//             <    is written>: x2
   x2 = 2;

   if (0==0)
//             <    is written>: x
      x = &x1;
   else
//             <    is written>: x
      x = &x2;
//             <may be read   >: x1 x2
//             <    is read   >: x
//             <    is written>: y

   y = *x;
   return 0;
   // END BLOCK
}
int main()
{
   // BEGIN BLOCK
   int *x, x1, x2, y;

//  <x1-W-EXACT-{}>

   x1 = 1;

//  <x2-W-EXACT-{}>

   x2 = 2;

   if (0==0)

//  <x-W-EXACT-{}>

      x = &x1;
   else
      x = &x2;

//  <x-R-EXACT-{}>
//  <x1-R-MAY-{}>
//  <x2-R-MAY-{}>
//  <y-W-EXACT-{}>


   y = *x;
   return 0;
   // END BLOCK
}
