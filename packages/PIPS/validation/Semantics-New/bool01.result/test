
Source code with cumulated effects

//             <may be written>: *ANY_MODULE*:*ANYWHERE*
int main(void)
{
   int bla, *pbla;
//             <may be written>: *ANY_MODULE*:*ANYWHERE*
//             <    is read   >: pbla
   //  _Bool b = 1;
   
   //pbla = &bla;
   // kill all preconditions
   *pbla = 1;

   return 0;
}

Source code with transformers


//  T(main) {main==0}

int main(void)
{

//  T(bla) {}

   int bla, *pbla;

//  T(bla) {}

   //  _Bool b = 1;
   
   //pbla = &bla;
   // kill all preconditions
   *pbla = 1;

//  T(main) {main==0}


   return 0;
}

Source code with preconditions


//  P() {}

int main(void)
{

//  P() {}

   int bla, *pbla;

//  P(bla) {}

   //  _Bool b = 1;
   
   //pbla = &bla;
   // kill all preconditions
   *pbla = 1;

//  P(bla) {}


   return 0;
}

