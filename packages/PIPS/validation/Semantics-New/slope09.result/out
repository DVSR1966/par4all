//  T() {}

void slope09()
{

//  T(k,x,y) {}

   int x, y, k;

//  T() {0<=y, y<=9}

   if (!(0<=y&&y<=9))

//  T() {0==-1}

      abort();

//  T(k) {x+y==k}


   if (61*y<=55*x+54)

//  T(k) {x+y==k}

      k = x+y;
   else

//  T(k) {x+y==k}

      k = x+y;

//  T() {}


   return;
}

