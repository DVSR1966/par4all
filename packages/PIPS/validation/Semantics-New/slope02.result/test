
Transformers for slope02


//  T() {}

void slope02()
{

//  T(k,x,y) {}

   int x, y, k;

//  T() {0<=x, x<=10}

   
   /* create a bounding box */
   //assert(0<=x && x<=10 && 0<=y && 0<=10);
   if (!(0<=x&&x<=10))

//  T() {0==-1}

      abort();

//  T(k) {}

   
   /* Define a horizontal constraint that is slightly increasing in
      * rationals.  It links point (-1, 5) to point(11,7), 6y=x+31. It
      * should be simplified into y<=5 and 5y<x+25.
      *
      * Problem for testing: the redundancy elimination kill one of the
      * bounding box inequalities... The analysis was wrong: you do not
      * need a bounding box but simply bounds for the x dimension if the
      * y coefficient is large and vice versa.
      */
   if (12*y<=x+61)

//  T(k) {x+y==k}

      k = x+y;

//  T() {}

   return;
}

Preconditions for slope02


//  P() {}

void slope02()
{

//  P() {}

   int x, y, k;

//  P(k,x,y) {}

   
   /* create a bounding box */
   //assert(0<=x && x<=10 && 0<=y && 0<=10);
   if (!(0<=x&&x<=10))

//  P(k,x,y) {}

      abort();

//  P(k,x,y) {0<=x, x<=10}

   
   /* Define a horizontal constraint that is slightly increasing in
      * rationals.  It links point (-1, 5) to point(11,7), 6y=x+31. It
      * should be simplified into y<=5 and 5y<x+25.
      *
      * Problem for testing: the redundancy elimination kill one of the
      * bounding box inequalities... The analysis was wrong: you do not
      * need a bounding box but simply bounds for the x dimension if the
      * y coefficient is large and vice versa.
      */
   if (12*y<=x+61)

//  P(k,x,y) {0<=x, x<=10, 12y<=x+61}

      k = x+y;

//  P(k,x,y) {0<=x, x<=10}

   return;
}
