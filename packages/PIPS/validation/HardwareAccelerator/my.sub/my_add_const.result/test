! acceleration function

// FREIA OpenCL includes
#include <CL/opencl.h>
#include "freia.h"
#include "private/freia_opencl_runtime.h"


// dag 0: 1 ops and 0 copies, optimized to 1 ops and 0+0+0 copies

// hold kernels for my_add_const_opencl_helper_0_0_0
static cl_kernel my_add_const_opencl_helper_0_0_0_kernel[2];

// compile kernels for my_add_const_opencl_helper_0_0_0
static freia_status my_add_const_opencl_helper_0_0_0_compile(void)
{
  // OpenCL source for my_add_const_opencl_helper_0_0_0
  const char * my_add_const_opencl_helper_0_0_0_source =
    "#include <freia_opencl_runtime.hcl>\n"
    "\n"
    "// opencl function my_add_const_opencl_helper_0_0_0\n"
    "KERNEL void my_add_const_opencl_helper_0_0_0(\n"
    "  GLOBAL PIXEL * o0,\n"
    "  int ofs_o0,\n"
    "  GLOBAL PIXEL * i0, // const?\n"
    "  int ofs_i0,\n"
    "  int width,\n"
    "  int pitch,\n"
    "  int c0)\n"
    "{\n"
    "  GLOBAL PIXEL * p0 = o0 + ofs_o0;\n"
    "  GLOBAL PIXEL * j0 = i0 + ofs_i0;\n"
    "\n"
    "  // thread's pixel loop\n"
    "  int gid = pitch*get_global_id(0);\n"
    "  int i;\n"
    "  for (i=gid; i < (gid+width); i++)\n"
    "  {\n"
    "    // get input pixels\n"
    "    PIXEL in0 = j0[i];\n"
    "    // pixel computations\n"
    "    PIXEL t5 = PIXEL_ADD(in0, c0);\n"
    "    // set output pixels\n"
    "    p0[i] = t5;\n"
    "  }\n"
    "}\n";
  freia_status err = FREIA_OK;
  err |= freia_op_compile_kernel(my_add_const_opencl_helper_0_0_0_source, "my_add_const_opencl_helper_0_0_0", "-DPIXEL8", &my_add_const_opencl_helper_0_0_0_kernel[0]);
  err |= freia_op_compile_kernel(my_add_const_opencl_helper_0_0_0_source, "my_add_const_opencl_helper_0_0_0", "-DPIXEL16", &my_add_const_opencl_helper_0_0_0_kernel[1]);
  return err;
}

// helper function my_add_const_opencl_helper_0_0_0
freia_status my_add_const_opencl_helper_0_0_0(
  freia_data2d * o0,
  const freia_data2d * i0,
  int32_t c0)
{
  freia_status err = FREIA_OK;

  // handle on the fly compilation...
  static int to_compile = 1;
  if (to_compile) {
    err |= my_add_const_opencl_helper_0_0_0_compile();
    // compilation may have failed
    if (err) return err;
    to_compile = 0;
  }

  // now get kernel, which must be have be compiled
  uint32_t bpp = i0->bpp>>4;
  cl_kernel kernel = my_add_const_opencl_helper_0_0_0_kernel[bpp];

  // call kernel my_add_const_opencl_helper_0_0_0
  err |= freia_op_call_kernel(kernel, 1, 1, 1, 0, o0, i0, c0);

  return err;
}
#include <freia_opencl_runtime.hcl>
// generated OpenCL kernels for function my_add_const

// opencl for dag 0

// opencl function my_add_const_opencl_helper_0_0_0
KERNEL void my_add_const_opencl_helper_0_0_0(
  GLOBAL PIXEL * o0,
  int ofs_o0,
  GLOBAL PIXEL * i0, // const?
  int ofs_i0,
  int width,
  int pitch,
  int c0)
{
  GLOBAL PIXEL * p0 = o0 + ofs_o0;
  GLOBAL PIXEL * j0 = i0 + ofs_i0;

  // thread's pixel loop
  int gid = pitch*get_global_id(0);
  int i;
  for (i=gid; i < (gid+width); i++)
  {
    // get input pixels
    PIXEL in0 = j0[i];
    // pixel computations
    PIXEL t5 = PIXEL_ADD(in0, c0);
    // set output pixels
    p0[i] = t5;
  }
}

