/* Jump into a block from a goto before the block */

void block_scope5n();                                                   /*0003*/

void block_scope5n()
{
   int x = 6;                                                           /*0005*/
   goto lab1;                                                           /*0006*/
lab2:   x = 2;                                                               /*0008*/
   {
      int x = 7;                                                        /*0010*/
lab1:      x--;
   }
   x++;                                                                 /*0014*/
   goto lab2;                                                           /*0015*/
}

