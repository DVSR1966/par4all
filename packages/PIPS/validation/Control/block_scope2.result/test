
Parser output

int block_scope2()
{
   int x = 6;                                                           /*0004*/
lab1:   x--;                                                                 /*0007*/
   {
      int x;                                                            /*0009*/
      x++;                                                              /*0010*/
   }
   {
      int x = -1;                                                       /*0014*/
      goto lab1;                                                        /*0015*/
   }
   return x;                                                            /*0017*/
}

