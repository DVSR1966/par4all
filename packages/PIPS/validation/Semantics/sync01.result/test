//  P() {}

int main(void)
{
   //bool b = false, ok = true;
   //int x=0, y=0;

//  P() {}

   _Bool b, ok;

//  P(b,ok) {}

   int x, y;

//  P(b,ok,x,y) {}

   if (!(!b&&ok&&x==0&&y==0))

//  P(b,ok,x,y) {}


      exit(1);

//  P(b,ok,x,y) {b==0, ok==1, x==0, y==0}

   while (1) {

//  P(b,ok,x,y) {b+y==x, 0<=b, b<=1, b<=x, 0<=ok, ok<=1, 1<=ok+x}

      if (b)

//  P(b,ok,x,y) {b==1, x==y+1, 0<=ok, ok<=1, 1<=ok+x, 1<=x}

         y = y+1;
      else

//  P(b,ok,x,y) {b==0, x==y, 0<=ok, ok<=1, 1<=ok+x, 0<=x}

         x = x+1;

//  P(b,ok,x,y) {b+x==y+1, 0<=ok, ok<=1, 1<=ok+y, 1<=x, y<=x, x<=y+1}

      // flip-flop
      b = !b;

//  P(b,ok,x,y) {b+y==x, 0<=ok, ok<=1, 1<=ok+y, 1<=x, y<=x, x<=y+1}

      ok = ok&&x>=y;

//  P(b,ok,x,y) {b+y==x, 0<=ok, ok<=1, 1<=x, y<=x, x<=y+1, 0<=y}

      // assert(ok);
      // we want ok==1
      fprintf(stdout, "b=%d ok=%d x=%d y=%d\n", b, ok, x, y);
   }
}
