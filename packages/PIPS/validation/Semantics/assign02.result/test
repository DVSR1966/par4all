
Source code with proper effects

void assign02()
{
//               <must be written>: i
   int i = 1;                                                           /*0010*/
   int j;                                                               /*0011*/
   int k;                                                               /*0012*/
   int n;                                                               /*0013*/
//               <must be read   >: n
//               <must be written>: n

   n++;                                                                 /*0015*/
//               <must be written>: j k
   j = k = 2;                                                           /*0016*/
//               <must be read   >: i j
//               <must be written>: i k
   i = j, k = i;
//               <must be read   >: i j
//               <must be written>: i j
   j = 2*i, i = j+1;
//               <must be read   >: i
   /* i is assigned before k, left-to-right evaluation */
   
   
   
   
   foo(i);                                                              /*0022*/
}

Source code with cumulated effects

void assign02()
{
//               <must be written>: i
   int i = 1;                                                           /*0010*/
   int j;                                                               /*0011*/
   int k;                                                               /*0012*/
   int n;                                                               /*0013*/
//               <must be read   >: n
//               <must be written>: n

   n++;                                                                 /*0015*/
//               <must be written>: j k
   j = k = 2;                                                           /*0016*/
//               <must be read   >: i j
//               <must be written>: i k
   i = j, k = i;
//               <must be read   >: i j
//               <must be written>: i j
   j = 2*i, i = j+1;
//               <must be read   >: i
   /* i is assigned before k, left-to-right evaluation */
   
   
   
   
   foo(i);                                                              /*0022*/
}

Source code with transformers


//  T() {}

void assign02()
{

//  T(i) {i==1}

   int i = 1;                                                           /*0010*/

//  T(j) {}

   int j;                                                               /*0011*/

//  T(k) {}

   int k;                                                               /*0012*/

//  T(n) {}

   int n;                                                               /*0013*/

//  T(n) {n==n#init+1}


   n++;                                                                 /*0015*/

//  T(j,k) {j==2, k==2}

   j = k = 2;                                                           /*0016*/

//  T(i,k) {i==j, i==k}

   i = j, k = i;

//  T(i,j) {i==2i#init+1, 2i#init==j}

   j = 2*i, i = j+1;

//  T() {}

   /* i is assigned before k, left-to-right evaluation */
   
   
   
   
   foo(i);                                                              /*0022*/
}

Source code with preconditions


//  P() {}

void assign02()
{

//  P() {}

   int i = 1;                                                           /*0010*/

//  P(i) {i==1}

   int j;                                                               /*0011*/

//  P(i,j) {i==1}

   int k;                                                               /*0012*/

//  P(i,j,k) {i==1}

   int n;                                                               /*0013*/

//  P(i,j,k,n) {i==1}


   n++;                                                                 /*0015*/

//  P(i,j,k,n) {i==1}

   j = k = 2;                                                           /*0016*/

//  P(i,j,k,n) {i==1, j==2, k==2}

   i = j, k = i;

//  P(i,j,k,n) {i==2, j==2, k==2}

   j = 2*i, i = j+1;

//  P(i,j,k,n) {i==5, j==4, k==2}

   /* i is assigned before k, left-to-right evaluation */
   
   
   
   
   foo(i);                                                              /*0022*/
}

