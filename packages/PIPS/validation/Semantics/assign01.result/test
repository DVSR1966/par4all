
Source code with proper effects

void assign01()
{
   int i;                                                               /*0010*/
   int j;                                                               /*0011*/
//               <must be written>: i j

   i = 2+(j = 1)+3;                                                     /*0013*/
//               <must be read   >: i

   foo(i);                                                              /*0015*/
}

Source code with cumulated effects

void assign01()
{
   int i;                                                               /*0010*/
   int j;                                                               /*0011*/
//               <must be written>: i j

   i = 2+(j = 1)+3;                                                     /*0013*/
//               <must be read   >: i

   foo(i);                                                              /*0015*/
}

Source code with transformers


//  T() {}

void assign01()
{

//  T() {}

   int i;                                                               /*0010*/

//  T() {}

   int j;                                                               /*0011*/

//  T(i,j) {i==6, j==1}


   i = 2+(j = 1)+3;                                                     /*0013*/

//  T() {}


   foo(i);                                                              /*0015*/
}
