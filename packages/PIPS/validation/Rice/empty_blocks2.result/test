
Code with cumulated effects

int main(int argc, char **argv)
{
//               <must be written>: i j
   int i, j = 100;
//               <must be written>: i
   for(i = 0; i <= 99; i += 1)
      ;
//               <must be written>: i
   for(i = 0; i <= 99; i += 1)
      ;
//               <must be read   >: i
//               <must be written>: j
   //on attends qqch différent de "inconnu"
   j = i;
   return 0;
}

Parallelized code

int main(int argc, char **argv)
{
   int i, j = 100;
   //on attends qqch différent de "inconnu"
   j = i;
   return 0;
}

Parallelized code seen as sequential

int main(int argc, char **argv)
{
//               <must be written>: i j
   int i, j = 100;
//               <must be read   >: i
//               <must be written>: j
   //on attends qqch différent de "inconnu"
   j = i;
   return 0;
}

Parallelized code with preconditions


//  P() {}

int main(int argc, char **argv)
{

//  P() {}

   int i, j = 100;

//  P(i,j) {j==100}

   //on attends qqch différent de "inconnu"
   j = i;

//  P(i,j) {i==j}

   return 0;
}

