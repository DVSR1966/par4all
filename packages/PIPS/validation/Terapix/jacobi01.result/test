void * memload(void **dest, void *src, size_t n)
{
   size_t i;
   void *pdest = *dest = malloc(n);

   if (!pdest) 
      return (void *) 0;

   for(i = 0; i <= n-1; i += 1)
      ((char *) pdest)[i] = ((const char *) src)[i];
   return pdest;
}
void * memstore(void **dest, void *src, size_t n)
{
   size_t i;
   void *pdest = *dest = malloc(n);

   if (!pdest) 
      return (void *) 0;

   for(i = 0; i <= n-1; i += 1)
      ((char *) pdest)[i] = ((const char *) src)[i];
   return pdest;
}
void write_data(char filename[])
{
   int i, j;
   unsigned char c;
   FILE *fp;
   if ((fp = fopen(filename, "w"))==(void *) 0) {
      perror("Error opening file");
      exit(0);
   }
   
   /* Write the PGM header: */
   fprintf(fp, "P5\n%d %d\n255\n", 64, 64);

   for(i = 0; i <= 63; i += 1)
      for(j = 0; j <= 63; j += 1) {
         c = space[i][j];
         fputc(c, fp);
      }
   fclose(fp);
}
