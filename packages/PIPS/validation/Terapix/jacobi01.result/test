int main(int argc, char *argv[])
{
   int t;
   //PIPS generated variable
   float_t (*P_0)[64][64], (*P_1)[64][64];

   if (argc!=2) {
      
      
      fprintf(stderr, "%s needs only one argument that is the PGM image input file\n", argv[0]);
      exit(0);
   }
   get_data(argv[1]);

   for(t = 0; t <= 63; t += 1) {
      memalloc(&P_1, sizeof(float_t[64][64])-1+1);
      memalloc(&P_0, sizeof(float_t[64][64])-1+1);
      memload(save, *P_1, sizeof(float_t[64][64])-1+1);
      memload(space, *P_0, sizeof(float_t[64][64])-1+1);
      compute();
      memstore(space, *P_0, sizeof(float_t[64][64])-1+1);
      memstore(save, *P_1, sizeof(float_t[64][64])-1+1);
      memfree(*P_1);
      memfree(*P_0);
   }

   write_data("output.pgm");

   return 0;
}

