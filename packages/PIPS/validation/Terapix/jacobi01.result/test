void kernel1(float_t save[64][64], float_t space[64][64], int i)
{
   //PIPS generated variable
   int j;
   {
      //PIPS generated variable
      int i_1;
      for(i_1 = i; i_1 <= MIN(i+9, 62); i_1 += 1)
         for(j = 1; j <= 62; j += 1)

            save[i_1][j] = 0.25*(space[i_1-1][j]+space[i_1+1][j]+space[i_1][j-1]+space[i_1][j+1]);
   }
}
