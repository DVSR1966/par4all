
Initial code

void vector_product(size_t n, double a[n][n], double b[n], double c[n])
{
   size_t i, j;
   double res = 0.;
   for(i = 0; i <= n-1; i += 1)
      for(j = 0; j <= n-1; j += 1)
         c[i] += a[i][j]*b[j];
}

Code after array conversion

void vector_product(size_t n, double *a, double *b, double *c)
{
   size_t i, j;
   double res = 0.;
   for(i = 0; i <= n-1; i += 1)
      for(j = 0; j <= n-1; j += 1)
         *(c+i) += *(a+j+n*i)**(b+j);
}

Code after partial eval

void vector_product(size_t n, double *a, double *b, double *c)
{
   size_t i, j;
   double res = 0.;
   for(i = 0; i <= n-1; i += 1)
      for(j = 0; j <= n-1; j += 1)
         *(c+i) += *(a+j+n*i)**(b+j);
}

