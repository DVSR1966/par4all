void * safe_malloc(size_t n)
{
   void *ptr = malloc(n*sizeof(*ptr));                                  /*0004*/
   int i;                                                               /*0005*/

   if (!ptr) {                                                          /*0007*/
      exit(1);                                                          /*0008*/
      exit(1);                                                          /*0009*/
   }
   else
      return ptr;                                                       /*0012*/
}
