int bazar(float c)
{
   int i;
   double d = c*c;
   if (d>2) goto big;                                                   /*0005*/
   if (c<0) goto l99999;                                                /*0006*/
big:   i = c;
neg:   c += d;
loop:   if (i<0) goto exit;                                                  /*0015*/
   i--;                                                                 /*0016*/
   goto exit;
l99999:   ;
   c = -c;                                                              /*0007*/
   goto neg;
exit:   return d;
}
int bazar(float c)
{
   int i;
   double d = c*c;
   if (d>2) goto big;                                                   /*0005*/
   if (c<0) goto l99999;                                                /*0006*/
big:   i = c;
   goto neg;
l99999:   ;
   c = -c;                                                              /*0007*/
neg:   ;
   c += d;
loop:   if (i<0)                                                             /*0015*/
      ;
   else
      i--;                                                              /*0016*/
exit:   return d;
}
