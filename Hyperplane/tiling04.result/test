After axis parallel tiling (5, 5)

      PROGRAM TILING04

C     Check tiling: use integer lower loop bounds and symbolic upper bounds

      REAL X(0:15, 0:10)

      DO I_t = M1/5, M2/5                                               0001
         DO J_t = N1/5, N2/5

            DO I = MAX(M1, 5*I_t), MIN(M2, 4+5*I_t)                     0001
               DO J = MAX(5*J_t, N1), MIN(4+5*J_t, N2)                  0002
                  X(I,J) = FLOAT(I+J)                                   0003
200               CONTINUE                                              0004
               ENDDO
            ENDDO
         ENDDO
      ENDDO

      PRINT *, X                                                        0006

      END
