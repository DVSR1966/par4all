
Initial source code

void loop_hyperplane01(int n, int ni, int nj)
{
   float x[n][n];
   int i;
   int j;

l1:
   for(i = 0; i <= ni-1; i += 1)
l2:
      for(j = 0; j <= nj-1; j += 1)
         x[i][j] = 0.;
}

Source code after loop hyperplane

void loop_hyperplane01(int n, int ni, int nj)
{
   float x[n][n];
   int i;
   int j;
   int ip;
   int jp;

l1:
   for(ip = 0; ip <= -2+ni+nj; ip += 1)
      for(jp = MAX(-ip, 1-ni); jp <= MIN(-1-ip+nj, 0); jp += 1)
         x[-jp][ip+jp] = 0.;
}

