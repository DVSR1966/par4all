
! initial function

freia_status freia_scalar_05(freia_data2d *o, freia_data2d *i, uint32_t *k)
{
   freia_data2d *X = freia_common_create_data(16, 128, 128);
   freia_data2d *tB = freia_common_create_data(16, 128, 128);
   freia_data2d *tC = freia_common_create_data(16, 128, 128);
   freia_data2d *tC2 = freia_common_create_data(16, 128, 128);
   freia_data2d *tD = freia_common_create_data(16, 128, 128);
   int sA;
   int sB;
   int sC;
   
   // look for order issues when reusing a temporary image
   freia_aipo_global_max(i, &sA);                                       /*0014*/
   freia_aipo_threshold(tB, i, sA-10, sA-1, false);                     /*0015*/
   freia_aipo_erode_8c(X, i, k);                                        /*0016*/
   freia_aipo_global_min(X, &sB);                                       /*0017*/
   freia_aipo_threshold(tC, X, sB-10, sB-1, false);                     /*0018*/
   freia_aipo_add(tC2, tC, tC);                                         /*0019*/
   freia_aipo_dilate_8c(X, tB, k);                                      /*0020*/
   freia_aipo_global_vol(X, &sC);                                       /*0021*/
   freia_aipo_threshold(tD, X, sC-10, sC-1, false);                     /*0022*/
   freia_aipo_add(o, tC2, tD);                                          /*0023*/

   freia_common_destruct_data(X);                                       /*0025*/
   freia_common_destruct_data(tB);                                      /*0026*/
   freia_common_destruct_data(tC);                                      /*0027*/
   freia_common_destruct_data(tC2);                                     /*0028*/
   freia_common_destruct_data(tD);                                      /*0029*/
   return FREIA_OK;                                                     /*0030*/
}

