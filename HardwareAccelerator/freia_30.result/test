! acceleration function

#include <freiaCommon.h>
#include <freiaCoarseGrain.h>
#include <spoc.h>

// FREIA-SPoC helper function for module freia_30
freia_status freia_30_helper_0_0_0(freia_data2d * o0, freia_data2d * o1, freia_data2d * i0, int32_t inf0, int32_t sup1, bool bin2)
{
  spoc_instr si;
  spoc_param sp;
  spoc_reduction reduc;
  freia_microcode mcode;
  freia_dynamic_param dynparam;
  freia_reduction_results redres;
  freia_op_sel op = 0;
  freia_op_param param;
  freia_status ret;
  int i;

  // init pipe to nop
  spoc_init_pipe(&si, &sp, 16);


  // STAGE 0
  // i [0 input 0] -> [0 alu] 9 or
  // nope
  // i [0 input 1] -> [0 alu] 9 or
  // nope
  // alu 9 or stage 0
  si.alu[0][0].op = SPOC_ALU_OR_IN0_IN1;

  // i [0 input 1] -> [0 threshold 1] 8 threshold
  si.mux[0][3].op = SPOC_MUX_IN1;
  // threshold 8 threshold stage 0 side 1
  si.th[0][1].op = bin2? SPOC_TH_BINARIZE : SPOC_TH_NO_BINARIZE;
  sp.th[0][1].boundmin = inf0;
  sp.th[0][1].boundmax = sup1;


  // output image o0 on 1 and image o1 on 0
  // o0 [0 threshold 1] -> [0 output 1] 0 null
  // nope
  // o1 [0 alu] -> [0 output 0] 0 null
  si.mux[0][0].op = SPOC_MUX_IN1;
  si.mux[0][2].op = SPOC_MUX_IN0;

  mcode.raw = (freia_ptr) &si;
  mcode.size = sizeof(spoc_instr);

  dynparam.raw = (freia_ptr) &sp;
  dynparam.size = sizeof(spoc_param);

  redres.raw = (freia_ptr) &reduc;
  redres.size = sizeof(spoc_reduction);

  ret = freia_cg_write_microcode(&mcode);
  ret |= freia_cg_write_dynamic_param(&dynparam);

  // actual call of spoc hardware
  freia_cg_template_process_2i_2o(op, param, o1, o0, i0, i0);

  return ret;
}

! updated function

freia_status freia_30(freia_data2d *o0, freia_data2d *o1, freia_data2d *i)
{
   // parallel reuses (similar to freia_27)
   // o0 = f(i)
   // o1 = i | i
   freia_30_helper_0_0_0(o0, o1, i, 10, 20, true);                      /*0008*/

   return FREIA_OK;                                                     /*0011*/
}
