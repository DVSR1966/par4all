
! initial function

void freia_skip_03(freia_data2d *o, freia_data2d *i)
{
   
   
   freia_data2d *t0 = freia_common_create_data(16, 128, 128), *t1 = freia_common_create_data(16, 128, 128);          /*0007*/
   int32_t vol, mvol, seuil;                                            /*0008*/
   // sub_const must be reordered *before* seuil assignment...
   freia_aipo_global_vol(i, &vol);                                      /*0010*/
   freia_aipo_sub_const(t0, i, 127);                                    /*0011*/
   mvol = vol/1000+1;                                                   /*0012*/
   freia_aipo_add_const(t1, t0, 3);                                     /*0013*/
   seuil = mvol+3;                                                      /*0014*/
   freia_aipo_threshold(o, t1, seuil, 250, false);                      /*0015*/
   // cleanup
   freia_common_destruct_data(t0);                                      /*0017*/
   freia_common_destruct_data(t1);                                      /*0018*/
}

