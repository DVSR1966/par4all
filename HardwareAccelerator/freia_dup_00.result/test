  // inputs
  "i" [shape=circle];

  // outputs

  // computation vertices
  "8 ?=" [shape=none];
  "7 max" [shape=diamond];
  "i" -> "8 ?=";
  "i" -> "7 max";
}

! updated function for

int freia_dup_00(freia_data2d *i)
{
   int max1, max2;                                                      /*0005*/
   // same measure performed twice
   freia_aipo_global_max(i, &max1);                                     /*0007*/
   freia_aipo_scalar_copy(&max2, &max1);                                /*0008*/
   return max1+max2;                                                    /*0009*/
}
