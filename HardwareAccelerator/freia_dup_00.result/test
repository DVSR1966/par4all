! acceleration function

#include <freiaCommon.h>
#include <freiaMediumGrain.h>
#include <freiaCoarseGrain.h>
#include <spoc.h>

// FREIA-SPoC helper function for module freia_dup_00
freia_status freia_dup_00_helper_0_0_0(freia_data2d * i0,
  int32_t * po0)
{
  spoc_instr si;
  spoc_param sp;
  spoc_reduction reduc;
  freia_microcode mcode;
  freia_dynamic_param dynparam;
  freia_reduction_results redres;
  freia_op_param param;
  freia_status ret;
  int i;

  // init pipe to nop
  spoc_init_pipe(&si, &sp, 16);


  // STAGE 0
  // i [0 input 0] -> [0 measure 0] 0 undefined
  si.mux[0][0].op = SPOC_MUX_IN0;


  // no output image

  mcode.raw = (freia_ptr) &si;
  mcode.size = sizeof(spoc_instr);

  dynparam.raw = (freia_ptr) &sp;
  dynparam.size = sizeof(spoc_param);

  redres.raw = (freia_ptr) &reduc;
  redres.size = sizeof(spoc_reduction);

  ret = freia_cg_write_microcode(&mcode);
  ret |= freia_cg_write_dynamic_param(&dynparam);

  // actual call of spoc hardware
  freia_cg_template_process_2i_2o(&param, NULL, NULL, i0, NULL);

  // get reductions
  freia_cg_read_reduction_results(&redres);

  // measure 7 global_max stage 0 side 0
  *po0 = (int32_t) reduc.measure[0][0].maximum;

  return ret;
}

! updated function

int freia_dup_00(freia_data2d *i)
{
   int max1, max2;                                                      /*0005*/
   // same measure performed twice
   freia_dup_00_helper_0_0_0(i, &max1);                                 /*0007*/
   freia_aipo_scalar_copy(&max2, &max1);                                /*0008*/
   return max1+max2;                                                    /*0009*/
}

