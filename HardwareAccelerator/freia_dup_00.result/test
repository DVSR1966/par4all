#
# AIPO
#

! initial function

int freia_dup_00(freia_data2d *i)
{
   int max1, max2;                                                      /*0005*/
   // same measure performed twice
   freia_aipo_global_max(i, &max1);                                     /*0007*/
   freia_aipo_global_max(i, &max2);                                     /*0008*/
   return max1+max2;                                                    /*0009*/
}

