
! initial function

freia_status freia_34(freia_data2d *o, freia_data2d *i, int32_t *k)
{
   freia_data2d *t1 = freia_common_create_data(16, 128, 128);
   freia_data2d *t2 = freia_common_create_data(16, 128, 128);
   
   // 1 stage pipeline
   // t1 = f(i)
   // t2 = g(i)
   // o  = t1 - t2
   freia_aipo_erode_8c(t1, i, k);                                       /*0012*/
   freia_aipo_dilate_8c(t2, i, k);                                      /*0013*/
   freia_aipo_sub(o, t1, t2);                                           /*0014*/

   freia_common_destruct_data(t1);                                      /*0016*/
   freia_common_destruct_data(t2);                                      /*0017*/

   return FREIA_OK;                                                     /*0019*/
}

