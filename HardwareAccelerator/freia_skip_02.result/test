
! initial function

void freia_skip_02(freia_data2d *o, freia_data2d *i)
{
   freia_data2d *t0 = freia_common_create_data(16, 128, 128);
   freia_data2d *t1 = freia_common_create_data(16, 128, 128);
   int32_t min;
   int32_t seuil;
   // div_const must be reordered *before* seuil assignment...
   freia_aipo_global_min(i, &min);                                      /*0009*/
   freia_aipo_and_const(t0, i, 127);                                    /*0010*/
   seuil = min-10;                                                      /*0011*/
   freia_aipo_div_const(t1, t0, 3);                                     /*0012*/
   freia_aipo_threshold(o, t1, seuil, 210, false);                      /*0013*/
   // cleanup
   freia_common_destruct_data(t0);                                      /*0015*/
   freia_common_destruct_data(t1);                                      /*0016*/
}

