
! initial function

freia_status freia_skip_01(freia_data2d *o, freia_data2d *i)
{
   freia_status ret = FREIA_OK;                                         /*0006*/
   freia_data2d *t = freia_common_create_data(16, 128, 128);            /*0007*/
   int32_t max, seuil;                                                  /*0008*/
   freia_aipo_global_max(i, &max);                                      /*0009*/
   freia_aipo_sub_const(t, i, 20);                                      /*0010*/
   seuil = max-10;                                                      /*0011*/
   freia_aipo_threshold(o, t, 0, seuil, false);                         /*0012*/
   freia_common_destruct_data(t);                                       /*0013*/
   return ret;                                                          /*0014*/
}

