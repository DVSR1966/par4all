
! initial function

void border_nse(freia_data2d *out, freia_data2d *in)
{
   
   
   const int32_t kernel = {0, 1, 1, 0, 1, 1, 0, 1, 1};                  /*0007*/
   freia_aipo_erode_8c(out, in, kernel);                                /*0008*/
}

