
! initial function

void freia_skip_04(freia_data2d *o, freia_data2d *i)
{
   int32_t max;
   int32_t seuil;
   freia_data2d *t = freia_common_create_data(16, 128, 128);
   // use some control in an intermediate statement
   freia_aipo_global_max(i, &max);                                      /*0007*/
   freia_aipo_xor_const(t, i, 111);                                     /*0008*/
   if (max>128)                                                         /*0009*/
      seuil = max-10;                                                   /*0010*/
   else
      seuil = max+15;                                                   /*0012*/
   freia_aipo_threshold(o, t, 8, seuil-4, true);                        /*0013*/
   freia_common_destruct_data(t);                                       /*0014*/
}

