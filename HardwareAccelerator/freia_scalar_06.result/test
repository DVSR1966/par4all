
! initial function

freia_status freia_scalar_06(freia_data2d *o, freia_data2d *i, uint32_t *k)
{
   freia_data2d *X = freia_common_create_data(16, 128, 128);
   freia_data2d *tB = freia_common_create_data(16, 128, 128);
   freia_data2d *tC = freia_common_create_data(16, 128, 128);
   freia_data2d *tC2 = freia_common_create_data(16, 128, 128);
   freia_data2d *tC3 = freia_common_create_data(16, 128, 128);
   freia_data2d *tD = freia_common_create_data(16, 128, 128);
   int32_t sA;
   int32_t sA2;
   int32_t sB;
   
   // look for order issues when reusing a temporary image
   // A
   freia_aipo_global_max(i, &sA);                                       /*0016*/
   // B
   freia_aipo_threshold(tB, i, sA-10, sA-1, false);                     /*0018*/
   // A
   freia_aipo_erode_8c(X, i, k);                                        /*0020*/
   // A
   freia_aipo_global_min(X, &sA2);                                      /*0022*/
   // C with X from A
   freia_aipo_threshold(tC, X, sA2-10, sA2-1, false);                   /*0024*/
   // C
   freia_aipo_dilate_6c(tC2, tC, k);                                    /*0026*/
   // C
   freia_aipo_add(tC3, tC, tC2);                                        /*0028*/
   // B
   freia_aipo_dilate_8c(X, tB, k);                                      /*0030*/
   // B
   freia_aipo_global_vol(X, &sB);                                       /*0032*/
   // D with X from B
   freia_aipo_threshold(tD, X, sB-10, sB-1, false);                     /*0034*/
   // D
   freia_aipo_add(o, tC3, tD);                                          /*0036*/

   freia_common_destruct_data(X);                                       /*0038*/
   freia_common_destruct_data(tB);                                      /*0039*/
   freia_common_destruct_data(tC);                                      /*0040*/
   freia_common_destruct_data(tD);                                      /*0041*/
   return FREIA_OK;                                                     /*0042*/
}

