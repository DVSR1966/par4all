
! initial function

freia_status freia_ret_00(freia_data2d *o, freia_data2d *i0, freia_data2d *i1)
{
   freia_status ret;                                                    /*0006*/
   freia_data2d *t = freia_common_create_data(16, 128, 128);            /*0007*/
   ret = freia_aipo_addsat(t, i0, i1);                                  /*0008*/
   ret |= freia_aipo_sub(o, i0, t);                                     /*0009*/
   freia_common_destruct_data(t);                                       /*0010*/
   return ret;                                                          /*0011*/
}

