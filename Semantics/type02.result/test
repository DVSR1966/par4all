
C  T() {}

      PROGRAM TYPE02

C     Goal: check the extension of the semantics analysis to logical
C     scalar variables

      LOGICAL L1, L2, L3, L4

C  T(L1) {L1==1}


      L1 = .TRUE.                                                       0001

C  T(L2) {L2==0}

      L2 = .FALSE.                                                      0002

C  T(L1) {L1+L2==1, 0<=L1, L1<=1}

      L1 = .NOT.L2                                                      0003

C  T(L1) {L1+L1#init==1, 0<=L1, L1<=1}

      L1 = .NOT.L1                                                      0004

C  T(L3) {0<=L1, L1<=1, L3<=L1+L2, L1<=L3, 0<=L2, L2<=1, L2<=L3,
C    0<=L3, L3<=1}

      L3 = L1.OR.L2                                                     0005

C  T(L4) {0<=L1, L1<=1, L1+L2<=L4+1, L4<=L1, 0<=L2, L2<=1, L4<=L2,
C    0<=L4, L4<=1}

      L4 = L1.AND.L2                                                    0006

C  T() {}


      PRINT *, L1, L2, L3, L4                                           0007

      END

C  P() {}

      PROGRAM TYPE02

C     Goal: check the extension of the semantics analysis to logical
C     scalar variables

      LOGICAL L1, L2, L3, L4

C  P() {}


      L1 = .TRUE.                                                       0001

C  P(L1) {L1==1}

      L2 = .FALSE.                                                      0002

C  P(L1,L2) {L1==1, L2==0}

      L1 = .NOT.L2                                                      0003

C  P(L1,L2) {L1==1, L2==0}

      L1 = .NOT.L1                                                      0004

C  P(L1,L2) {L1==0, L2==0}

      L3 = L1.OR.L2                                                     0005

C  P(L1,L2,L3) {L1==0, L2==0, L3==0}

      L4 = L1.AND.L2                                                    0006

C  P(L1,L2,L3,L4) {L1==0, L2==0, L3==0, L4==0}


      PRINT *, L1, L2, L3, L4                                           0007

      END

