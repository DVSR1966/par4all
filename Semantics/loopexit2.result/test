--- Preconditions for LOOPEXIT2

C  P() {}

      PROGRAM LOOPEXIT2

c     Is it possible to say something about the exit value of 
C     loop indices

      REAL T(10)

C  P() {}


      IF (N.GE.1) THEN                                                  0001

C  P() {1<=N}


         J = 0                                                          0002

C  P(J) {J==0, 1<=N}

         DO I = 1, N                                                    0003

C  P(I,J) {2I==J+2, 1<=I, I<=N, 1<=N}

            T(I) = 0.                                                   0004

C  P(I,J) {2I==J+2, 1<=I, I<=N, 1<=N}

            J = J+2                                                     0005
         ENDDO

C  P(I,J) {2I==J+2, I==N+1, 2<=I}


         PRINT *, I, J                                                  0006

C  P(I,J) {2I==J+2, I==N+1, 2<=I}


         J = 0                                                          0007

C  P(I,J) {I==N+1, J==0, 2<=I}

         DO I = 1, N, -1                                                0008

C  P(I,J) {2I+J==2, I<=1, N<=I, 1<=N}

            T(I) = 0.                                                   0009

C  P(I,J) {2I+J==2, I<=1, N<=I, 1<=N}

            J = J+2                                                     0010
         ENDDO

C  P(I,J) {2I+J==2, 0<=I, I<=1, I+1<=N}


         PRINT *, I, J                                                  0011

      ENDIF

C  P(I,J) {}


      IF (N.GE.0) THEN                                                  0012

C  P(I,J) {0<=N}


         J = 0                                                          0013

C  P(I,J) {J==0, 0<=N}

         DO I = 1, N                                                    0014

C  P(I,J) {2I==J+2, 1<=I, I<=N, 0<=N}

            T(I) = 0.                                                   0015

C  P(I,J) {2I==J+2, 1<=I, I<=N, 0<=N}

            J = J+2                                                     0016
         ENDDO

C  P(I,J) {2I==J+2, I==N+1, 1<=I}


         PRINT *, I, J                                                  0017

      ENDIF

C  P(I,J) {}


      IF (N.LT.1) THEN                                                  0018

C  P(I,J) {N<=0}


         J = 0                                                          0019

C  P(I,J) {J==0, N<=0}

         DO I = 1, N                                                    0020

C  P() {0==-1}

            T(I) = 0.                                                   0021

C  P() {0==-1}

            J = J+2                                                     0022
         ENDDO

C  P(I,J) {I==1, J==0, N<=0}


         PRINT *, I, J                                                  0023

      ENDIF

C  P(I,J) {}


      J = 0                                                             0024

C  P(I,J) {J==0}

      DO I = 1, N                                                       0025

C  P(I,J) {2I==J+2, 1<=I, I<=N}

         T(I) = 0.                                                      0026

C  P(I,J) {2I==J+2, 1<=I, I<=N}

         J = J+2                                                        0027
      ENDDO

C  P(I,J) {2I==J+2, 1<=I, N+1<=I}


      PRINT *, I, J                                                     0028

      END
