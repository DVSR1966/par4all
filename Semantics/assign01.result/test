Source code with transformers


//  T() {}

void assign01()
{
   int i;                                                               /*0004*/
   int j;                                                               /*0005*/

//  T(i,j) {i==6, j==1}


   i = 2+(j = 1)+3;                                                     /*0007*/

//  T() {}


   foo(i);                                                              /*0009*/
}
