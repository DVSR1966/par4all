
Source code with proper effects

void assign03()
{
   int i;
   int j;
   int k;
   int n;
//               <must be written>: j

   j = 2;                                                               /*0009*/
//               <must be read   >: j
//               <must be written>: i j
   i = j+(j = 0)+j;                                                     /*0010*/

   foo(i);                                                              /*0012*/
}

Source code with cumulated effects

void assign03()
{
   int i;
   int j;
   int k;
   int n;
//               <must be written>: j

   j = 2;                                                               /*0009*/
//               <must be read   >: j
//               <must be written>: i j
   i = j+(j = 0)+j;                                                     /*0010*/

   foo(i);                                                              /*0012*/
}

Source code with transformers


//  T() {}

void assign03()
{
   int i;
   int j;
   int k;
   int n;

//  T(j) {j==2}


   j = 2;                                                               /*0009*/

//  T(i,j) {i==j#init, j==0}

   i = j+(j = 0)+j;                                                     /*0010*/

//  T() {}


   foo(i);                                                              /*0012*/
}
