C  T() {0==-1}

      PROGRAM W10

C     Side effects in while loop condition

      INTEGER MS

C  T() {0==-1}

C (0,1)
C     BEGIN BLOCK

C  T(MS) {MS==0}

C (0,2)

      MS = 0                                                            0001

C  T() {}

C (0,3)

      DO WHILE (INC(MS).LE.2)                                           0002

C  T() {MS<=2}

C (0,4)
         PRINT *, MS                                                    0003
      ENDDO

C  T() {0==-1}

C (0,5)

      PRINT *, MS                                                       0004

C     END BLOCK
      END
