
C  T() {}

      PROGRAM TYPE13
      REAL A, B

C  T(A,B) {}


      READ *, A, B                                                      0001

C  T() {}


      IF (A.EQ.-B) THEN                                                 0002

C  T() {}

         PRINT *, 'a+b = 0'                                             0003

C  T() {}

         PRINT *, A+B                                                   0004
      ENDIF

      END

C  P() {}

      PROGRAM TYPE13
      REAL A, B

C  P() {}


      READ *, A, B                                                      0001

C  P(A,B) {}


      IF (A.EQ.-B) THEN                                                 0002

C  P(A,B) {A+B==0}

         PRINT *, 'a+b = 0'                                             0003

C  P(A,B) {A+B==0}

         PRINT *, A+B                                                   0004
      ENDIF

      END

