int main()
{
   int i = 1;

   if (i==1)
      goto main_switch_1_case_1;
   if (i==2)
      goto main_switch_1_case_2;
   goto main_switch_1_default;
main_switch_1_case_1:   ;
   printf("1 = %d", i);
   goto main_break_1;
main_switch_1_case_2:   ;
   printf("2 = %d", i);
   goto main_break_1;
main_switch_1_default:   ;
main_break_1:   ;
}

