void * safe_malloc(int n)
{
   long i;                                                              /*0004*/

   if (!i) {                                                            /*0006*/
      overloaded exit();                                                /*0007*/
      exit(2);                                                          /*0008*/
      exit(4);                                                          /*0009*/
   }
   else
      return (void *) i;                                                /*0012*/
}
