// OMP style
int main()
{
#pragma omp parallel default(shared) 
   {
#pragma omp single
      {
         printf("Hello ");
      }
#pragma omp single
      {
         printf("world!\n");
      }
   }
}
// MPI style
int main()
{
   {
      //PIPS generated variable
      int rank0;
      //PIPS generated variable
      MPI_Status status0;
      //PIPS generated variable
      MPI_Request request0;
      MPI_Init(&argc, &argv);
      MPI_Comm_rank(MPI_COMM_WORLD, &rank0);
      if (rank0==0)
         printf("Hello ");
      MPI_Barrier(MPI_COMM_WORLD);
      if (rank0==0)
         printf("world!\n");
      MPI_Barrier(MPI_COMM_WORLD);
   }
   MPI_Finalize();
}
