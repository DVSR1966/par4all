
PROPER POINTER EFFECTS

void point_to01()
{
   struct s {
      int a;
      int b;
      int c;
      int d;
   } c, *p;
//             <    is written>: p

   p = &c;

   if (1) {
//             <    is read   >: p
//             <    is written>: c.a
      p->a = 1;
//             <    is read   >: p
//             <    is written>: c.b
      p->b = 2;
//             <    is read   >: p
//             <    is written>: c.c
      p->c = 3;
//             <    is read   >: c.a p
//             <    is written>: c.d
      p->d = p->a;
//             <    is read   >: p
//             <    is written>: c.a c.d
      p->d = p->a = 4;
   }
}

POINTS-TO

//  {}
void point_to01()
{
//  points to = {}
   struct s {
      int a;
      int b;
      int c;
      int d;
   } c, *p;
//  {(p,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}

   p = &c;
//  {(p,c,-Exact-)}

   if (1) {
//  {(p,c,-Exact-)}
      p->a = 1;
//  {(p,c,-Exact-)}
      p->b = 2;
//  {(p,c,-Exact-)}
      p->c = 3;
//  {(p,c,-Exact-)}
      p->d = p->a;
//  {(p,c,-Exact-)}
      p->d = p->a = 4;
   }
}
