
PROPER POINTER EFFECTS

int main(void)
{
   int i;
//             <    is written>: pp
   int **pp = (void *) 0;
//             <    is written>: _RANDOM_EFFECTS:GEN_SEED

   srand(time((void *) 0));
//             <may be read   >: stdout[0]
//             <may be written>: stdout[0]
//             <    is read   >: stdout _RANDOM_EFFECTS:GEN_SEED 
//                               __IO_EFFECTS:LUNS[1]
//             <    is written>: _RANDOM_EFFECTS:GEN_SEED 
//                               __IO_EFFECTS:LUNS[1]
   if (alea()) {
//             <    is written>: pi
      int *pi = &i;
//             <    is written>: pp
      pp = &pi;
//             <    is read   >: pi pp
//             <    is written>: i
      **pp = 1;
   }
//             <may be read   >: stdout[0]
//             <may be written>: stdout[0]
//             <    is read   >: pp stdout __IO_EFFECTS:LUNS[1]
//             <    is written>: __IO_EFFECTS:LUNS[1]
   
   // pp points to a dead value in the stack
   printf("%p\n", pp);
//             <    is read   >: pp
   
   // possible segfault.
   // should generate an error while analyzing?
   if (pp)
//             <may be read   >: *ANY_MODULE*:*ANYWHERE*
//             <may be written>: *ANY_MODULE*:*ANYWHERE*
      **pp = 0;
   return 0;
}

POINTS-TO

//  {}
int main(void)
{
//  points to = {}
   int i;
//  points to = {}
   int **pp = (void *) 0;
//  {(pp,*NULL_POINTER*,-Exact-)}

   srand(time((void *) 0));
//  {(pp,*NULL_POINTER*,-Exact-)}
   if (alea()) {
//  {(pp,*NULL_POINTER*,-Exact-)}
      int *pi = &i;
//  {(pi,i,-Exact-);(pp,*NULL_POINTER*,-Exact-)}
      pp = &pi;
//  {(pi,i,-Exact-);(pp,pi,-Exact-)}
      **pp = 1;
   }
//  {(pp,*NULL_POINTER*,-MAY-);(pp,*ANY_MODULE*:*NOWHERE*_b0,-MAY-)}
   
   // pp points to a dead value in the stack
   printf("%p\n", pp);
//  {(pp,*NULL_POINTER*,-MAY-);(pp,*ANY_MODULE*:*NOWHERE*_b0,-MAY-)}
   
   // possible segfault.
   // should generate an error while analyzing?
   if (pp)
//  {(pp,*NULL_POINTER*,-MAY-);(pp,*ANY_MODULE*:*NOWHERE*_b0,-MAY-)}
      **pp = 0;
//  {(pp,*NULL_POINTER*,-MAY-);(pp,*ANY_MODULE*:*NOWHERE*_b0,-MAY-)}
   return 0;
}
