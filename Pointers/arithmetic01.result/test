int main()
{
   // BEGIN BLOCK
   int *i, j, k;
//             <    is written>: k
   k = 0;
//             <    is read   >: k
//             <    is written>: j
   j = k;
//             <    is written>: i
   i = &j;
//             <    is read   >: i
//             <    is written>: i
   i++;

   return 0;
   // END BLOCK
}
POINTS TO
//  {}
int main()
{
//  points to = {}
   // BEGIN BLOCK
//  points to = {}
   int *i, j, k;
//  {(i,*ANY_MODULE*:*NOWHERE*,-Exact-)}
   k = 0;
//  {(i,*ANY_MODULE*:*NOWHERE*,-Exact-)}
   j = k;
//  {(i,*ANY_MODULE*:*NOWHERE*,-Exact-)}
   i = &j;
//  {(i,j,-Exact-)}
   i++;
//  {(i,*ANY_MODULE*:*ANYWHERE*_b0,-Exact-)}

   return 0;
   // END BLOCK
}
