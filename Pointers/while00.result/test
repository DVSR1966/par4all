int main()
{
   // BEGIN BLOCK
   int *a, *b, c, d;
//               <must be written>: c
   c = 0;
//               <must be written>: d
   d = 1;
//               <must be written>: b
   b = &c;
//               <must be read   >: c

   while (c>0) {
      // BEGIN BLOCK
//               <must be read   >: b
//               <must be written>: a

      a = b;
//               <must be written>: b
      b = &d;
      // END BLOCK
   }
//               <must be written>: b
   b = &c;
   return 0;
   // END BLOCK
}
POINTS TO
//  {}
int main()
{
   // BEGIN BLOCK
   int *a, *b, c, d;
   c = 0;
   d = 1;
   b = &c;
//  {(b,c,-Exact-)}

   while (c>0) {
//  {(a,d,-MAY-);(b,c,-MAY-);(a,c,-MAY-);(b,d,-MAY-)}
      // BEGIN BLOCK

      a = b;
      b = &d;
      // END BLOCK
   }
//  {(a,d,-MAY-);(b,c,-MAY-);(a,c,-MAY-);(b,d,-MAY-)}
   b = &c;
//  {(a,c,-MAY-);(b,c,-Exact-);(a,d,-MAY-)}
   return 0;
   // END BLOCK
}
