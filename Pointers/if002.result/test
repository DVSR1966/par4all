int main()
{
   // BEGIN BLOCK
   int *p, i;
//             <    is written>: i
   i = 1;
//             <    is read   >: i

   if (i>0)
//             <    is written>: p
      p = &i;
   else
//             <    is written>: p
      p = &i;

   return 0;
   // END BLOCK
}
POINTS TO
//  {}
int main()
{
//  points to = {}
   // BEGIN BLOCK
//  {(p,*ANY_MODULE*:*NOWHERE*,-Exact-)}
   int *p, i;
//  {(p,*ANY_MODULE*:*NOWHERE*,-Exact-)}
   i = 1;
//  {(p,*ANY_MODULE*:*NOWHERE*,-Exact-)}

   if (i>0)
//  {(p,i,-Exact-)}
      p = &i;
   else
//  {(p,i,-Exact-)}
      p = &i;
//  {(p,i,-Exact-)}

   return 0;
   // END BLOCK
}
int main()
{
   // BEGIN BLOCK
   int *p, i;
//             <    is written>: i
   i = 1;
//             <    is read   >: i

   if (i>0)
//             <    is written>: p
      p = &i;
   else
//             <    is written>: p
      p = &i;

   return 0;
   // END BLOCK
}
