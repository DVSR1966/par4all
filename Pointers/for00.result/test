int main()
{
   int *a, *b, c, d, i;
//             <    is written>: c
   c = 0;
//             <    is written>: d
   d = 1;
//             <    is written>: b
   b = &c;
//             <    is read   >: i
//             <    is written>: i

   for (i = 1;i<5;i++) {
//             <    is written>: c
      c = 5;
//             <    is read   >: b
//             <    is written>: a
      a = b;
//             <    is written>: b
      b = &d;
   }

   return 0;
}
POINTS TO
//  {}
int main()
{
//  {(a,*ANY_MODULE*:*NOWHERE*,-Exact-);(b,*ANY_MODULE*:*NOWHERE*,
//   -Exact-)}
   int *a, *b, c, d, i;
//  {(a,*ANY_MODULE*:*NOWHERE*,-Exact-);(b,*ANY_MODULE*:*NOWHERE*,
//   -Exact-)}
   c = 0;
//  {(a,*ANY_MODULE*:*NOWHERE*,-Exact-);(b,*ANY_MODULE*:*NOWHERE*,
//   -Exact-)}
   d = 1;
//  {(a,*ANY_MODULE*:*NOWHERE*,-Exact-);(b,*ANY_MODULE*:*NOWHERE*,
//   -Exact-)}
   b = &c;
//  {(a,*ANY_MODULE*:*NOWHERE*,-Exact-);(b,c,-Exact-)}

   for (i = 1;i<5;i++) {
//  {(a,*ANY_MODULE*:*NOWHERE*,-MAY-);(a,c,-MAY-);(a,d,-MAY-);(b,c,
//   -MAY-);(b,d,-MAY-)}
      c = 5;
//  {(a,*ANY_MODULE*:*NOWHERE*,-MAY-);(a,c,-MAY-);(a,d,-MAY-);(b,c,
//   -MAY-);(b,d,-MAY-)}
      a = b;
//  {(a,c,-MAY-);(a,d,-MAY-);(b,c,-MAY-);(b,d,-MAY-)}
      b = &d;
   }
//  {(a,*ANY_MODULE*:*NOWHERE*,-MAY-);(a,c,-MAY-);(a,d,-MAY-);(b,c,
//   -MAY-);(b,d,-MAY-)}

   return 0;
}
