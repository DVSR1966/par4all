//  {}
int main(void)
{
//  points to = {}
   int i;
//  points to = {}
   int **pp;
//  {(pp,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
   srand(time((void *) 0));
//  {(pp,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}

   if (alea()) {
//  {(pp,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
      int *pi = &i;
//  {(pi,i,-Exact-);(pp,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
      pp = &pi;
//  {(pi,i,-Exact-);(pp,pi,-Exact-)}

      **pp = 1;
   }
//  {(pp,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
   
   // pp points to a dead value in the stack
   // should generate an error
   // **pp = 0; // segfault?
   
   printf("%p\n", pp);
//  {(pp,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
   return 0;
}
//  {}
static int alea(void)
{
//  points to = {}
   int r = rand();
//  points to = {}
   printf("%d\n", r);
//  points to = {}
   return rand()%2==1;
}

