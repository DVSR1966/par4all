int main()
{
   // BEGIN BLOCK
   int *x, x1, x2, y;
//               <must be written>: x1
   x1 = 1;
//               <must be written>: x2
   x2 = 2;

   if (0==0)
//               <must be written>: x
      x = &x1;
   else
//               <must be written>: x
      x = &x2;
//               <may be read    >: *ANY_MODULE*:*ANYWHERE*
//               <must be written>: y

   y = *x;
   return 0;
   // END BLOCK
}
POINTS TO
//  {}
int main()
{
//  points to = {}
   // BEGIN BLOCK
//  points to = {}
   int *x, x1, x2, y;
//  points to = {}
   x1 = 1;
//  points to = {}
   x2 = 2;
//  points to = {}

   if (0==0)
//  points to = {}
      x = &x1;
   else
//  points to = {}
      x = &x2;
//  {(x,x1,-MAY-);(x,x2,-MAY-)}

   y = *x;
//  {(x,x1,-MAY-);(x,x2,-MAY-)}
   return 0;
   // END BLOCK
}
int main()
{
   // BEGIN BLOCK
   int *x, x1, x2, y;
//               <must be written>: x1
   x1 = 1;
//               <must be written>: x2
   x2 = 2;

   if (0==0)
//               <must be written>: x
      x = &x1;
   else
//               <must be written>: x
      x = &x2;
//               <may be read    >: x1 x2
//               <must be read   >: x
//               <must be written>: y

   y = *x;
   return 0;
   // END BLOCK
}
