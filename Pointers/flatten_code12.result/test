
Execute initial code

foo=1
foo=2
foo=3
foo=4

Initial code

void flatten_code12(void)
{
// (0,1)
   // BEGIN BLOCK
// (0,2)
   int i = foo_0;                                                       /*0011*/
// (0,3)

   for(i = 0; i <= 3; i += 1) {
// (0,4)
      // BEGIN BLOCK
// (0,5)
      static int foo = 0;                                               /*0014*/
// (0,6)

      foo++;                                                            /*0016*/
// (0,7)

      fprintf(stdout, "foo=%d\n", foo);                                 /*0018*/
      // END BLOCK
   }
   // END BLOCK
}

POINTS TO

//  {}
void flatten_code12(void)
{
//  points to = {}
// (0,1)
   // BEGIN BLOCK
//  points to = {}
// (0,2)
   int i = foo_0;                                                       /*0011*/
//  points to = {}
// (0,3)

   for(i = 0; i <= 3; i += 1) {
//  points to = {}
// (0,4)
      // BEGIN BLOCK
//  points to = {}
// (0,5)
      static int foo = 0;                                               /*0014*/
//  points to = {}
// (0,6)

      foo++;                                                            /*0016*/
//  points to = {}
// (0,7)

      fprintf(stdout, "foo=%d\n", foo);                                 /*0018*/
      // END BLOCK
   }
   // END BLOCK
}
