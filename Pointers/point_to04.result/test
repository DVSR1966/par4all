
PROPER POINTER EFFECTS

void point_to04()
{
   struct s {
      int a;
      int b;
      int c;
      int d;
   } c, *p;
//             <    is written>: p

   p = &c;
//             <    is read   >: p p[0].a
//             <    is written>: p[0].d

   p->d = p->a;
//             <    is read   >: p
//             <    is written>: p[0].a p[0].d
   p->d = p->a = 4;
}

POINTS-TO

//  {}
void point_to04()
{
//  points to = {}
   struct s {
      int a;
      int b;
      int c;
      int d;
   } c, *p;
//  {(p,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}

   p = &c;
//  {(p,c,-Exact-)}

   p->d = p->a;
//  {(p,c,-Exact-)}
   p->d = p->a = 4;
}
