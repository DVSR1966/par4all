
POINTS-TO

//  {}
int main()
{
//  points to = {}
   int *a, *b, c, d, i;
//  {(a,*ANY_MODULE*:*NOWHERE*_b0,-Exact-);(b,
//   *ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
   c = 0;
//  {(a,*ANY_MODULE*:*NOWHERE*_b0,-Exact-);(b,
//   *ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
   d = 1;
//  {(a,*ANY_MODULE*:*NOWHERE*_b0,-Exact-);(b,
//   *ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
   b = &c;
//  {(a,*ANY_MODULE*:*NOWHERE*_b0,-Exact-);(b,c,-Exact-)}

   for(i = 1; i <= 4; i += 1) {
//  points to = {}
      c = 5;
//  points to = {}
      a = b;
//  points to = {}
      b = &d;
   }
//  {(a,d,-MAY-);(a,*ANY_MODULE*:*NOWHERE*_b0,-MAY-);(a,c,-MAY-);(b,d,
//   -MAY-);(b,c,-MAY-)}

   return 0;
}

PROPER  EFFECTS WITH POINTS TO

int main()
{
   int *a, *b, c, d, i;
//             <    is written>: c
   c = 0;
//             <    is written>: d
   d = 1;
//             <    is written>: b
   b = &c;
//             <    is written>: i

   for(i = 1; i <= 4; i += 1) {
//             <    is written>: c
      c = 5;
//             <    is read   >: b
//             <    is written>: a
      a = b;
//             <    is written>: b
      b = &d;
   }

   return 0;
}
