
POINTS-TO

//  {}
int main()
{
//  points to = {}
   int i;
//  points to = {}
   int *p = 0;
//  {(p,*NULL_POINTER*,-Exact-)}
   int **q = 0;
//  {(p,*NULL_POINTER*,-Exact-);(q,*NULL_POINTER*,-Exact-)}

   *p = 1;
//  {(p,*NULL_POINTER*,-Exact-);(q,*NULL_POINTER*,-Exact-)}
   *q = &i;
//  {(*NULL_POINTER*,i,-Exact-);(p,*NULL_POINTER*,-Exact-);(q,
//   *NULL_POINTER*,-Exact-)}

   return 0;
}

PROPER POINTER EFFECTS

int main()
{
   int i;
//             <    is written>: p
   int *p = 0;
//             <    is written>: q
   int **q = 0;
//             <    is read   >: p
//             <    is written>: *NULL_POINTER*

   *p = 1;
//             <    is read   >: q
//             <    is written>: *NULL_POINTER*
   *q = &i;

   return 0;
}
