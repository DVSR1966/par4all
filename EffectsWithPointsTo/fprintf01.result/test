
POINTS-TO

//  {}
int main()
{
//  {}
   FILE *pFile;
//  {(pFile,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
   int n;
//  {(pFile,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
   char name[100];
//  {(pFile,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}

   pFile = fopen("myfile.txt", "w");
//  {(pFile,*ANY_MODULE*:*ANYWHERE*_b0,-Exact-)}
   for(n = 0; n <= 2; n += 1) {
//  {(pFile,*ANY_MODULE*:*ANYWHERE*_b0,-Exact-)}
      puts("please, enter a name: ");
//  {(pFile,*ANY_MODULE*:*ANYWHERE*_b0,-Exact-)}
      gets(name);
//  {(pFile,*ANY_MODULE*:*ANYWHERE*_b0,-Exact-)}
      fprintf(pFile, "Name %d %s\n", n, name);
   }
//  {(pFile,*ANY_MODULE*:*ANYWHERE*_b0,-Exact-)}
   fclose(pFile);
}

PROPER  EFFECTS WITH POINTS TO

int main()
{
   FILE *pFile;
   int n;
   char name[100];
//             <may be read   >: __IO_EFFECTS:LUNS[*]
//             <may be written>: __IO_EFFECTS:LUNS[*]
//             <    is written>: pFile

   pFile = fopen("myfile.txt", "w");
//             <    is written>: n
   for(n = 0; n <= 2; n += 1) {
//             <may be read   >: stdout[0]
//             <may be written>: stdout[0]
//             <    is read   >: stdout __IO_EFFECTS:LUNS[1]
//             <    is written>: __IO_EFFECTS:LUNS[1]
      puts("please, enter a name: ");
//             <may be read   >: stdin[0]
//             <may be written>: name[*] stdin[0]
//             <    is read   >: stdin __IO_EFFECTS:LUNS[0]
//             <    is written>: __IO_EFFECTS:LUNS[0]
      gets(name);
//             <may be read   >: *ANY_MODULE*:*ANYWHERE* 
//                               __IO_EFFECTS:LUNS[*]
//             <may be written>: *ANY_MODULE*:*ANYWHERE* 
//                               __IO_EFFECTS:LUNS[*]
      fprintf(pFile, "Name %d %s\n", n, name);
   }
//             <may be read   >: *ANY_MODULE*:*ANYWHERE* 
//                               __IO_EFFECTS:LUNS[*]
//             <may be written>: *ANY_MODULE*:*ANYWHERE* 
//                               __IO_EFFECTS:LUNS[*]
   fclose(pFile);
}
