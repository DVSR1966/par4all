
POINTS-TO

//  {}
int main()
{
//  points to = {}
   int *x, x1, x2, y;
//  {(x,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
   x1 = 1;
//  {(x,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
   x2 = 2;
//  {(x,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}

   if (0==0)
//  {(x,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
      x = &x1;
   else
//  {(x,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}
      x = &x2;
//  {(x,x2,-MAY-);(x,x1,-MAY-)}

   y = *x;
//  {(x,x2,-MAY-);(x,x1,-MAY-)}
   return 0;
}

PROPER  EFFECTS WITH POINTS TO

int main()
{
   int *x, x1, x2, y;
//             <    is written>: x1
   x1 = 1;
//             <    is written>: x2
   x2 = 2;

   if (0==0)
//             <    is written>: x
      x = &x1;
   else
//             <    is written>: x
      x = &x2;
//             <may be read   >: x1 x2
//             <    is read   >: x
//             <    is written>: y

   y = *x;
   return 0;
}
