
POINTS-TO

//  {}
void point_to04()
{
//  points to = {}
   struct s {
      int a;
      int b;
      int c;
      int d;
   } c, *p;
//  {(p,*ANY_MODULE*:*NOWHERE*_b0,-Exact-)}

   p = &c;
//  {(p,c,-Exact-)}

   p->d = p->a;
//  {(p,c,-Exact-)}
   p->d = p->a = 4;
}

PROPER  EFFECTS WITH POINTS TO

void point_to04()
{
   struct s {
      int a;
      int b;
      int c;
      int d;
   } c, *p;
//             <    is written>: p

   p = &c;
//             <    is read   >: c.a p
//             <    is written>: c.d

   p->d = p->a;
//             <    is read   >: p
//             <    is written>: c.a c.d
   p->d = p->a = 4;
}
