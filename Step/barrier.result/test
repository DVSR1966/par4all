      SUBROUTINE BARRIER_PARDO10(I, I_L, I_U, N, A)
      INTEGER I, I_L, I_U, N
      INTEGER A(1:N)
      DO 10 I = I_L, I_U                                                0004
         A(I) = I                                                       0005
         PRINT *, I                                                     0006
C$STEP !$omp barrier
         CALL BARRIER_PARDO1_BARRIER1_HYBRID                            0008
10       CONTINUE                                                       0009
      END
      SUBROUTINE BARRIER_PARDO1_BARRIER1
      END
