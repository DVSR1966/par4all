      INTEGER STEP_COMM_SIZE, STEP_COMM_RANK

      INTEGER MAX_NB_LOOPSLICES
      PARAMETER (MAX_NB_LOOPSLICES = 16)
      
      INTEGER IDX_SLICE_LOW,IDX_SLICE_UP,STEP_IDX
      PARAMETER (IDX_SLICE_LOW = 1,IDX_SLICE_UP=2)

###################### barrier/src/barrier.f ######################
!!
!! file for barrier.f
!!
!
! barrier program
!
! Example of a barrier directive
!
! 2008
! Creation: A. Muller, 2008
!
! deadlock if N not a multiple of nb processes

      PROGRAM BARRIER
! MIL-STD-1753 Fortran extension not in PIPS
      implicit none
      INTEGER N
      PARAMETER (N=12)
      INTEGER I,A(N)
      CALL STEP_INIT_FORTRAN_ORDER
C$STEP !$omp parallel do
      CALL BARRIER_PARDO10_HYBRID(I, 1, N, N, A)

      PRINT *, A                                                        0025
      CALL STEP_FINALIZE
      END
