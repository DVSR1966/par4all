      REAL FUNCTION SUM(N, A)
      REAL S, A(100)
      IF (101.LE.N) STOP 'Bound violation:, READING,  array SUM:A, upper
     & bound, 1st dimension'
      IF (0.LE.N) STOP 'Bound violation:, READING,  array SUM:A, lower b
     &ound, 1st dimension'
      S = 0.
      DO I = 0, N
         S = S+2.*A(I)
      ENDDO
      SUM = S
      END
